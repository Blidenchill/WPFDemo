        <Grid
            Grid.Row="8"
            Margin="0,5,0,5"
            Background="#e9f5fc">
            <StackPanel Margin="0,0,0,0">
                <TextBlock
                    Margin="16,10,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    FontSize="14"
                    Foreground="#333333"
                    Text="备注" />
                <ItemsControl
                    Margin="0,0,0,3"
                    VerticalAlignment="Center"
                    ItemsSource="{Binding resumeComments}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid
                                x:Name="gd"
                                Width="{Binding ElementName=dc, Path=ActualWidth}"
                                MinHeight="25"
                                Background="Transparent">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="auto" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Margin="16,5,0,5"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    FontSize="12"
                                    Foreground="#333333"
                                    Text="{Binding comment}"
                                    TextWrapping="Wrap" />
                                <StackPanel
                                    Grid.Column="1"
                                    Margin="0,0,10,0"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    Orientation="Horizontal">
                                    <TextBlock
                                        Margin="0,0,0,0"
                                        VerticalAlignment="Center"
                                        FontSize="12"
                                        Foreground="#999999"
                                        Text="{Binding hrName}" />
                                    <TextBlock
                                        Margin="10,0,0,0"
                                        VerticalAlignment="Center"
                                        FontSize="12"
                                        Foreground="#999999"
                                        Text="{Binding createTime}" />
                                    <Grid
                                        x:Name="gdColse"
                                        Margin="10,0,0,0"
                                        VerticalAlignment="Center"
                                        Visibility="Hidden">
                                        <Button
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Center"
                                            Click="CommentDelete_Click"
                                            FocusVisualStyle="{x:Null}"
                                            Visibility="{Binding canDelete}"
                                            mc:Ignorable="d">
                                            <Button.Style>
                                                <Style TargetType="{x:Type Button}">
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate TargetType="{x:Type Button}">
                                                                <Border
                                                                    x:Name="PART_Border"
                                                                    Width="18"
                                                                    Height="18"
                                                                    Padding="0"
                                                                    Background="Transparent"
                                                                    BorderThickness="0">
                                                                    <Path
                                                                        x:Name="PART_Path"
                                                                        Width="10"
                                                                        Height="10"
                                                                        HorizontalAlignment="Center"
                                                                        VerticalAlignment="Center"
                                                                        Data="M6,6 L6,6 10,10 M10,6 L10,6 6,10"
                                                                        Fill="#A6bbc5"
                                                                        Stretch="Fill"
                                                                        Stroke="#888888"
                                                                        StrokeThickness="1.5" />
                                                                </Border>
                                                                <ControlTemplate.Triggers>
                                                                    <Trigger Property="IsMouseOver" Value="True">
                                                                        <Setter TargetName="PART_Path" Property="Stroke" Value="#f25751" />
                                                                    </Trigger>
                                                                    <Trigger Property="IsPressed" Value="True">
                                                                        <Setter TargetName="PART_Path" Property="Stroke" Value="#f25751" />
                                                                    </Trigger>
                                                                </ControlTemplate.Triggers>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Style>
                                            </Button.Style>
                                        </Button>

                                    </Grid>
                                </StackPanel>
                            </Grid>
                            <DataTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="gd" Property="Background" Value="#d9eefb" />
                                    <Setter TargetName="gdColse" Property="Visibility" Value="Visible" />

                                </Trigger>
                            </DataTemplate.Triggers>
                        </DataTemplate>

                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                <Grid Margin="14,10,14,0">
                    <TextBox
                        x:Name="tbBody"
                        Height="97"
                        Padding="10"
                        BorderBrush="#e5e5e5"
                        LostFocus="tbBody_LostFocus"
                        Text=""
                        TextChanged="tbBody_TextChanged"
                        TextWrapping="Wrap" />
                    <StackPanel
                        Margin="10"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Bottom"
                        Orientation="Horizontal">
                        <TextBlock
                            x:Name="tbCount"
                            FontSize="12"
                            Foreground="#00beff"
                            Text="{Binding ElementName=tbBody, Path=Text.Length}" />
                        <TextBlock
                            x:Name="tbCountStatic"
                            FontSize="12"
                            Foreground="#b4b4b4"
                            Text="/100" />
                    </StackPanel>
                </Grid>
                <TextBlock
                    x:Name="tbError"
                    Margin="16,3,0,0"
                    Foreground="#f25751"
                    Text="请填写邮件正文"
                    Visibility="Collapsed" />
                <Button
                    x:Name="btnAddComment"
                    Width="72"
                    Height="30"
                    Margin="14"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Click="CommentAdd_Click"
                    Cursor="Hand"
                    FocusVisualStyle="{x:Null}">
                    <Button.Style>
                        <Style TargetType="{x:Type Button}">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type Button}">
                                        <Border
                                            x:Name="PART_Border"
                                            Background="Transparent"
                                            BorderBrush="#00beff"
                                            BorderThickness="1"
                                            CornerRadius="3">
                                            <TextBlock
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Foreground="#00beff"
                                                Text="保存备注" />
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True" />
                                            <Trigger Property="IsPressed" Value="True" />
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
