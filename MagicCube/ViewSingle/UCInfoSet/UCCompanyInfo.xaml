                        </CheckBox>
                        <Border Width="183"
                                Height="26"
                                BorderBrush="#ebebeb"
                                BorderThickness="2"
                                CornerRadius="13"
                                Visibility="{Binding ElementName=chkAddTags,
                                                     Path=IsChecked,
                                                     Converter={StaticResource BoolToVisibilityConverter}}">
                            <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                                <templateUC:HintTextBox x:Name="txtAddTag"
                                                        Width="140"
                                                        BorderThickness="0"
                                                        Hint="编辑标签,最多10个字"
                                                        MaxLength="10" />
                                <templateUC:LinkButton Click="BtnAddSelfTag_Click"
                                                       Content="添加"
                                                       Cursor="Hand" />
                            </StackPanel>
                        </Border>
                    </StackPanel>
                    <Rectangle Height="1"
                               Margin="135,14,100,0"
                               Stroke="#d7d7d7"
                               StrokeDashArray="3.0 3.0" />
                    <TextBlock Margin="130,14,100,0"
                               HorizontalAlignment="Left"
                               Foreground="#666666"
                               Style="{x:Null}"
                               Text="可选标签" />
                    <Grid Margin="130,0,0,0" HorizontalAlignment="Left">
                        <Grid.Resources>
                            <Style x:Key="tagItemControl" TargetType="{x:Type ItemsControl}">
                                <Setter Property="ItemsPanel">
                                    <Setter.Value>
                                        <ItemsPanelTemplate>
                                            <WrapPanel MaxWidth="500"
                                                       Background="Transparent"
                                                       Orientation="Horizontal" />
                                        </ItemsPanelTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="ItemTemplate">
                                    <Setter.Value>
                                        <DataTemplate>
                                            <CheckBox Click="TagsCheck_Click" IsChecked="{Binding IsChecked, Mode=TwoWay}">
                                                <CheckBox.Template>
                                                    <ControlTemplate TargetType="{x:Type CheckBox}">
                                                        <Border x:Name="bd"
                                                                Height="26"
                                                                Margin="5,5,5,5"
                                                                BorderBrush="#00beff"
                                                                BorderThickness="1"
                                                                CornerRadius="13">
                                                            <TextBlock x:Name="txt"
                                                                       Margin="10,0,10,0"
                                                                       VerticalAlignment="Center"
                                                                       Foreground="#00beff"
                                                                       Text="{Binding Tag}" />
                                                        </Border>
                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsChecked" Value="True">
                                                                <Setter TargetName="bd" Property="BorderBrush" Value="#e5e5e5" />
                                                                <Setter TargetName="txt" Property="Foreground" Value="#b4b4b4" />
                                                                <Setter Property="IsEnabled" Value="False" />
                                                            </Trigger>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter TargetName="bd" Property="Background" Value="#e9f9ff" />
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </CheckBox.Template>
                                            </CheckBox>
                                        </DataTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                            <Style x:Key="TagsTabItem" TargetType="{x:Type TabItem}">
                                <Setter Property="Foreground" Value="White" />
                                <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                <Setter Property="VerticalContentAlignment" Value="Stretch" />
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="{x:Type TabItem}">
                                            <Grid Width="130"
                                                  Height="30"
                                                  Background="{TemplateBinding Background}"
                                                  SnapsToDevicePixels="true">
                                                <Border x:Name="Bd"
                                                        Background="Transparent"
                                                        BorderThickness="0">
                                                    <TextBlock x:Name="CN"
                                                               HorizontalAlignment="Center"
                                                               VerticalAlignment="Center"
                                                               FontSize="12"
                                                               Foreground="#666666"
                                                               Text="{TemplateBinding Header}" />
                                                </Border>
                                                <Line x:Name="line"
                                                      Margin="0,5,0,0"
                                                      VerticalAlignment="Bottom"
                                                      Stroke="Transparent"
                                                      StrokeThickness="2"
                                                      X1="0"
                                                      X2="120"
                                                      Y1="0"
                                                      Y2="0" />
                                            </Grid>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsSelected" Value="true">
                                                    <Setter TargetName="CN" Property="Foreground" Value="#00beff" />
                                                    <Setter TargetName="line" Property="Stroke" Value="#00beff" />
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Grid.Resources>

                        <TabControl x:Name="tabTagsChoose"
                                    Width="500"
                                    Background="Transparent"
                                    BorderThickness="0">
                            <TabItem x:Name="tabTag1"
                                     Margin="0"
                                     VerticalAlignment="Center"
                                     Background="Transparent"
                                     Header="薪酬福利 (11)"
                                     IsSelected="True"
                                     Style="{StaticResource TagsTabItem}">
                                <Grid HorizontalAlignment="Left" Background="Transparent">
                                    <ItemsControl x:Name="itemsTag1" Style="{StaticResource tagItemControl}" />
                                </Grid>
                            </TabItem>
                            <TabItem Margin="0"
                                     VerticalAlignment="Center"
                                     Background="Transparent"
                                     Header="公司氛围/环境 (13)"
                                     IsSelected="True"
                                     Style="{StaticResource TagsTabItem}">
                                <Grid HorizontalAlignment="Left">
                                    <ItemsControl x:Name="itemsTag2" Style="{StaticResource tagItemControl}" />
                                </Grid>
                            </TabItem>
                            <TabItem Margin="0"
                                     VerticalAlignment="Center"
                                     Background="Transparent"
                                     Header="更多福利 (14)"
                                     IsSelected="True"
                                     Style="{StaticResource TagsTabItem}">
                                <Grid HorizontalAlignment="Left">
                                    <ItemsControl x:Name="itemsTag3" Style="{StaticResource tagItemControl}" />
                                </Grid>
                            </TabItem>
                        </TabControl>
                    </Grid>
                    <StackPanel Margin="0,14,0,0" Orientation="Horizontal">
                        <TextBlock Margin="37,0,0,0"
                                   VerticalAlignment="Top"
                                   Foreground="Red"
                                   Text="*" />
                        <TextBlock Width="60"
                                   VerticalAlignment="Top"
                                   Text="公司介绍" />
                        <Grid Margin="24,0,0,0">
                            <Border x:Name="bdHtmlEditor"
                                    BorderBrush="Transparent"
                                    BorderThickness="2">
                                <Grid>
                                    <Rectangle Width="502"
                                               Height="254"
                                               Stroke="#dddddd"
                                               StrokeThickness="1" />
                                    <view:UCRichTextBox x:Name="ucHtmlEditor"
                                                        Width="500"
                                                        Height="252"
                                                        Margin="0"
                                                        GotFocus="TrackOperation_Event" />
                                    <TextBlock x:Name="tbHtmlEditorValidate"
                                               Margin="0,0,5,0"
                                               HorizontalAlignment="Right"
                                               VerticalAlignment="Top"
                                               FontSize="12"
                                               Foreground="Red"
                                               Text="请填写公司介绍"
                                               Visibility="Collapsed" />
                                </Grid>


                            </Border>


                        </Grid>
                    </StackPanel>
                    <StackPanel Margin="0,14,0,0" Orientation="Horizontal">
                        <TextBlock Width="60"
                                   Margin="37,0,0,0"
                                   Text="发展阶段" />
                        <Grid Margin="35,0,0,0">
                            <Rectangle Width="324"
                                       Height="34"
                                       Fill="#ffffff"
                                       Stroke="#e5e5e5"
                                       StrokeThickness="1" />

                            <ComboBox x:Name="ucHintComboBox"
                                      Width="324"
                                      Height="34"
                                      Background="Transparent"
                                      DisplayMemberPath="name"
                                      GotFocus="TrackOperation_Event"
                                      SelectedItem="{Binding FinancingState}"
                                      SelectedValuePath="name" />
                            <TextBlock Width="100"
                                       Margin="14,0,0,0"
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Center"
                                       Foreground="#b4b4b4"
                                       IsHitTestVisible="False"
                                       Style="{x:Null}"
                                       Text="请选择发展阶段"
                                       Visibility="{Binding ElementName=ucHintComboBox,
                                                            Path=SelectedIndex,
                                                            Converter={StaticResource ListCountNegativeToVisibleConverter}}" />
                        </Grid>
                    </StackPanel>
                    <StackPanel Margin="0,14,0,0" Orientation="Horizontal">
                        <TextBlock Width="60"
                                   Margin="37,0,0,0"
                                   Text="公司网址" />
                        <Grid Margin="35,0,0,0">
                            <Rectangle Width="324"
                                       Height="34"
                                       Fill="#ffffff"
                                       Stroke="#e5e5e5"
                                       StrokeThickness="1" />
                            <TextBlock Margin="14"
                                       HorizontalAlignment="Left"
                                       Foreground="#b4b4b4"
                                       Style="{x:Null}"
                                       Text="请填写公司网址"
                                       Visibility="{Binding ElementName=txtWebSite,
                                                            Path=Text,
                                                            Converter={StaticResource StringNullToVisibilityConverter}}" />
                            <TextBox x:Name="txtWebSite"
                                     Width="324"
                                     Height="34"
                                     Margin="0,0,0,0"
                                     VerticalContentAlignment="Center"
                                     input:InputMethod.IsInputMethodEnabled="False"
                                     Background="Transparent"
                                     BorderBrush="White"
                                     BorderThickness="0"
                                     FontSize="14"
                                     GotFocus="TrackOperation_Event"
                                     Padding="14,0,0,0"
                                     Text="{Binding WebSite,
                                                    UpdateSourceTrigger=PropertyChanged,
                                                    ValidatesOnDataErrors=True}">
                                <Validation.ErrorTemplate>
                                    <ControlTemplate>
                                        <!--  ControlTemplate要求只能有一个子级，所以加个容器控件DockPanel  -->
                                        <Border BorderBrush="Red" BorderThickness="1">
                                            <Grid>
                                                <AdornedElementPlaceholder />
                                                <TextBlock Width="95"
                                                           Margin="0,0,-100,0"
                                                           HorizontalAlignment="Right"
                                                           VerticalAlignment="Center"
                                                           FontSize="12"
                                                           Foreground="Red"
                                                           IsHitTestVisible="False"
                                                           Text="请输入正确网址" />

                                            </Grid>
                                        </Border>
                                    </ControlTemplate>
                                </Validation.ErrorTemplate>
                            </TextBox>
                        </Grid>

                    </StackPanel>
                    <StackPanel Margin="0,14,0,0" Orientation="Horizontal">
                        <TextBlock Width="60"
                                   Margin="37,0,0,0"
                                   VerticalAlignment="Top"
                                   Text="公司照片" />
                        <Grid Height="100" Margin="30,0,0,0">
                            <StackPanel Orientation="Horizontal">
                                <ListBox Background="Transparent"
                                         BorderThickness="0"
                                         ItemsSource="{Binding ImageUrls}"
                                         MouseLeftButtonUp="listImageList_MouseLeftButtonUp"
                                         ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                         ScrollViewer.VerticalScrollBarVisibility="Disabled">
                                    <ListBox.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel Height="100"
                                                        Background="Transparent"
                                                        Orientation="Horizontal" />
                                        </ItemsPanelTemplate>
                                    </ListBox.ItemsPanel>
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <Grid x:Name="gd"
                                                  Width="84"
                                                  Margin="6,0,0,0"
                                                  Background="Transparent">
                                                <Image Width="84"
                                                       Height="84"
                                                       Source="{Binding}" />
                                                <Button x:Name="btnDel"
                                                        Width="18"
                                                        Height="18"
                                                        Margin="0,-8,-5,0"
                                                        HorizontalAlignment="Right"
                                                        VerticalAlignment="Top"
                                                        Click="DeleteCompanyImageShow_Click"
                                                        Visibility="Collapsed">
                                                    <Button.Template>
                                                        <ControlTemplate>
                                                            <Border x:Name="PART_Border"
                                                                    Background="#818690"
                                                                    BorderThickness="0"
                                                                    CornerRadius="9"
                                                                    Padding="0">
                                                                <Path x:Name="PART_Path"
                                                                      Width="12"
                                                                      Height="12"
                                                                      HorizontalAlignment="Center"
                                                                      VerticalAlignment="Center"
                                                                      Data="M6,6 L6,6 10,10 M10,6 L10,6 6,10"
                                                                      Fill="#A6bbc5"
                                                                      Stretch="Fill"
                                                                      Stroke="#ffffff"
                                                                      StrokeThickness="1" />
                                                            </Border>
                                                            <ControlTemplate.Triggers>
                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                    <Setter TargetName="PART_Border" Property="Background" Value="red" />
                                                                </Trigger>
                                                            </ControlTemplate.Triggers>
                                                        </ControlTemplate>
                                                    </Button.Template>
                                                </Button>
                                            </Grid>
                                            <DataTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="gd" Property="Background" Value="Transparent" />
                                                    <Setter TargetName="btnDel" Property="Visibility" Value="Visible" />
                                                </Trigger>
                                            </DataTemplate.Triggers>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                    <ListBox.ItemContainerStyle>
                                        <Style TargetType="ListBoxItem">
                                            <!--<EventSetter Event="PreviewMouseLeftButtonDown" Handler="ListBoxItem_MouseDownClick" />-->
                                            <!--  设置控件模板  -->
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="ListBoxItem">
                                                        <Border Width="100"
                                                                Height="100"
                                                                Background="{TemplateBinding Background}">
                                                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                                                              TextBlock.Foreground="{TemplateBinding Foreground}" />
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>

                                            <!--  设置触发器  -->
                                            <Style.Triggers>
                                                <Trigger Property="IsSelected" Value="true">
                                                    <Setter Property="Background" Value="Transparent" />
                                                </Trigger>
                                                <Trigger Property="IsMouseOver" Value="true">
                                                    <Setter Property="Background" Value="Transparent" />
                                                </Trigger>
                                                <MultiTrigger>
                                                    <MultiTrigger.Conditions>
                                                        <Condition Property="IsMouseOver" Value="True" />
                                                        <Condition Property="IsSelected" Value="True" />
                                                    </MultiTrigger.Conditions>
                                                    <Setter Property="Background" Value="Transparent" />
                                                </MultiTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </ListBox.ItemContainerStyle>


                                </ListBox>
                                <Button x:Name="btnAddCompanyPictureShow"
                                        Width="84"
                                        Height="84"
                                        Margin="0"
                                        HorizontalAlignment="Left"
                                        Click="UploadCompanyImageShow_Click">
                                    <Button.Template>
                                        <ControlTemplate>
                                            <Border Width="84"
                                                    Height="84"
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"
                                                    BorderThickness="0"
                                                    CornerRadius="5">
                                                <Image Width="82"
                                                       Height="82"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"
                                                       Source="/MagicCube;component/Resources/ImageSingle/AddImage.png" />
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Cursor" Value="Hand" />
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                    <TextBlock Margin="126,0,0,0"
                               HorizontalAlignment="Left"
                               Foreground="#999999"
                               Style="{x:Null}"
                               Text="支持JPG,PNG格式，最多可上传5张" />
                    <StackPanel Margin="118,40,0,60" Orientation="Horizontal">
                        <templateUC:BlueButton Width="96"
                                               Height="34"
                                               Click="BtnSave_Click"
                                               Text="保存" />
                        <templateUC:WhiteButton Width="96"
                                                Height="34"
                                                Margin="14,0,0,0"
                                                Click="BtnCancel_Click"
                                                Text="取消" />
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Grid>
        <local:UCSelfImageUpload x:Name="ucCompanyLogoUpload"
                                 Grid.Row="1"
                                 Margin="0,20,0,0"
                                 Visibility="Collapsed" />
    </Grid>
</UserControl>
