<UserControl x:Class="MagicCube.ViewSingle.UCCompanyInfo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:BConvert="clr-namespace:MagicCube.BindingConvert"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:input="clr-namespace:System.Windows.Input;assembly=PresentationCore"
             xmlns:local="clr-namespace:MagicCube.ViewSingle"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:templateUC="clr-namespace:MagicCube.TemplateUC"
             xmlns:toolkit="http://schemas.xceed.com/wpf/xaml/toolkit"
             xmlns:view="clr-namespace:MagicCube.View"
             d:DesignHeight="1800"
             d:DesignWidth="700"
             mc:Ignorable="d">
    <Grid x:Name="gdMain">
        <Grid.Resources>
            <BConvert:URLToImageConverter x:Key="URLToImageConverter" />
            <BConvert:CompanyLogoConverter x:Key="CompanyLogoConverter" />
            <BConvert:HTML2RTFConverter x:Key="HTML2RTFConverter" />
            <BConvert:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
            <BConvert:StringNullToVisibilityConverter x:Key="StringNullToVisibilityConverter" />
            <BConvert:CompanyImageChooseLeftBtnVisibleConverter x:Key="CompanyImageChooseLeftBtnVisibleConverter" />
            <BConvert:CompanyImageChooseRightBtnVisibleConverter x:Key="CompanyImageChooseRightBtnVisibleConverter" />
            <BConvert:ComanyImageBackImageVisibleConverter x:Key="ComanyImageBackImageVisibleConverter" />
            <BConvert:StringVisibilityConverter x:Key="StringVisibilityConverter" />
            <BConvert:StringNullToUnEditConverter x:Key="StringNullToUnEditConverter" />
            <BConvert:URLToUploadImageConverter x:Key="URLToUploadImageConverter" />
            <BConvert:URLToUploadVisibleConverter x:Key="URLToUploadVisibleConverter" />
            <BConvert:ListCount1ToUnVisibleConverter x:Key="ListCount1ToUnVisibleConverter" />
            <BConvert:CompanyProvinceToCityConverter x:Key="CompanyProvinceToCityConverter" />
            <BConvert:CompanyCityToStringConverter x:Key="CompanyCityToStringConverter" />
            <BConvert:ListCountNegativeToVisibleConverter x:Key="ListCountNegativeToVisibleConverter" />

        </Grid.Resources>
        <Grid.RowDefinitions>
            <RowDefinition Height="60" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   FontSize="16"
                   Foreground="#333333"
                   Text="公司信息" />
        <Rectangle Height="1"
                   VerticalAlignment="Bottom"
                   Stroke="#e7e7e7" />

        <Grid x:Name="gdProvinceCity"
              Grid.RowSpan="2"
              Margin="-300,0,0,0"
              Panel.ZIndex="1"
              d:IsHidden="True"
              Background="#82000000"
              Visibility="{Binding ElementName=chkProvineCity,
                                   Path=IsChecked,
                                   Converter={StaticResource BoolToVisibilityConverter}}">
            <templateUC:UCProvinceCity x:Name="ucProvinceCity"
                                       Width="620"
                                       Height="581"
                                       ForceSecondSelcted="True"
                                       MostSelectedNum="1"
                                       StrTitle="最多选择1项" />
        </Grid>
        <Busy:BusyIndicator xmlns:Busy="clr-namespace:BusyIndicatorCtrl"
                            x:Name="busyCtrl"
                            Grid.Row="0"
                            Grid.RowSpan="10"
                            Panel.ZIndex="130"
                            d:IsHidden="True" />

        <Grid x:Name="gdCompany"
              Grid.Row="1"
              HorizontalAlignment="Stretch"
              VerticalAlignment="Top"
              Background="#ffffff"
              Visibility="Visible">
            <ScrollViewer Grid.Row="1"
                          Margin="0,0,0,0"
                          Template="{DynamicResource ScrollViewerControlTemplate1}"
                          VerticalScrollBarVisibility="Auto">
                <StackPanel HorizontalAlignment="Left">
                    <StackPanel Width="700"
                                Height="78"
                                Margin="0,20,0,0"
                                HorizontalAlignment="Left"
                                Orientation="Horizontal">
                        <Grid Margin="38,0,0,0">
                            <Border Width="78"
                                    Height="78"
                                    BorderBrush="Black"
                                    BorderThickness="0"
                                    CornerRadius="3">
                                <Border.Background>
                                    <ImageBrush ImageSource="{Binding SmallCompanyLogoUrl, Converter={StaticResource CompanyLogoConverter}}" />
                                </Border.Background>
                            </Border>

                        </Grid>
                        <StackPanel Margin="24,0,0,0">
                            <StackPanel Margin="0,5.3,0,9" Orientation="Horizontal">
                                <TextBlock MaxWidth="280"
                                           HorizontalAlignment="Left"
                                           FontSize="14"
                                           Foreground="#333333"
                                           Text="{Binding CompanyName}"
                                           TextTrimming="WordEllipsis" />
                                <TextBlock FontSize="14"
                                           Foreground="#333333"
                                           Text=" (" />
                                <TextBlock MaxWidth="100"
                                           FontSize="14"
                                           Foreground="#333333"
                                           Text="{Binding BriefName}"
                                           TextTrimming="CharacterEllipsis" />
                                <TextBlock FontSize="14"
                                           Foreground="#333333"
                                           Text=")" />
                            </StackPanel>

                            <StackPanel Width="400"
                                        Margin="0,0,5,11"
                                        Orientation="Horizontal">
                                <TextBlock MaxWidth="150"
                                           FontSize="12"
                                           Foreground="#666666"
                                           Text="{Binding FullCity}"
                                           TextTrimming="WordEllipsis" />
                                <Rectangle Width="1"
                                           Height="12"
                                           Margin="10,0,10,0"
                                           Fill="#eeeeee"
                                           Visibility="{Binding FullCity,
                                                                Converter={StaticResource StringVisibilityConverter}}" />
                                <TextBlock FontSize="12"
                                           Foreground="#666666"
                                           Text="{Binding Industries}" />
                                <Rectangle Width="1"
                                           Height="12"
                                           Margin="10,0,10,0"
                                           Fill="#eeeeee"
                                           Visibility="{Binding Industries,
                                                                Converter={StaticResource StringVisibilityConverter}}" />
                                <TextBlock FontSize="12"
                                           Foreground="#666666"
                                           Text="{Binding Nature.name}" />
                                <Rectangle Width="1"
                                           Height="12"
                                           Margin="10,0,10,0"
                                           Fill="#eeeeee"
                                           Visibility="{Binding Nature.name,
                                                                Converter={StaticResource StringVisibilityConverter}}" />
                                <TextBlock FontSize="12"
                                           Foreground="#666666"
                                           Text="{Binding Size.name}" />
                            </StackPanel>
                            <TextBlock Margin="0,0,0,15"
                                       HorizontalAlignment="Left"
                                       FontSize="12"
                                       Foreground="#666666"
                                       Text="{Binding Location}" />
                        </StackPanel>
                        <templateUC:BlueButton x:Name="btnModify"
                                               Width="114"
                                               Height="34"
                                               Margin="0,10"
                                               VerticalAlignment="Top"
                                               Click="BtnModify_Click"
                                               Text="修改公司信息" />
                    </StackPanel>
                    <Grid Width="700"
                          Margin="0,9,0,0"
                          HorizontalAlignment="Left">
                        <Border Width="80"
                                Height="26"
                                Margin="38,0,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Background="Transparent"
                                BorderBrush="#f8af1c"
                                BorderThickness="1"
                                CornerRadius="13"
                                Visibility="{Binding FinancingState.name,
                                                     Converter={StaticResource StringVisibilityConverter}}">
                            <TextBlock Margin="10,5,10,5"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       FontSize="12"
                                       Foreground="#f8af1c"
                                       Text="{Binding FinancingState.name}" />
                        </Border>

                        <ItemsControl x:Name="TagsList"
                                      Width="500"
                                      Margin="137,0,0,0"
                                      HorizontalAlignment="Left"
                                      ItemsSource="{Binding Tags}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel MaxHeight="500" Orientation="Horizontal" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border x:Name="bd"
                                            Height="26"
                                            Margin="5,0,5,10"
                                            BorderBrush="#00beff"
                                            BorderThickness="1"
                                            CornerRadius="13"
                                            Padding="5,0,5,0">
                                        <TextBlock Margin="10,0,10,0"
                                                   VerticalAlignment="Center"
                                                   FontSize="12"
                                                   Foreground="#00beff"
                                                   Text="{Binding}" />
                                    </Border>
                                </DataTemplate>

                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Grid>
                    <Rectangle Height="1"
                               Margin="0,15,0,20"
                               Stroke="#e7e7e7" />
                    <TextBlock Margin="36,0,0,0"
                               FontSize="14"
                               Foreground="#333333"
                               Text="公司简介" />
                    <toolkit:RichTextBox Grid.Row="1"
                                         MinHeight="102"
                                         Margin="33,10,36,25"
                                         Background="White"
                                         BorderBrush="White"
                                         BorderThickness="0"
                                         Focusable="False"
                                         FontSize="12"
                                         Foreground="#666666"
                                         IsReadOnly="True"
                                         Padding="1"
                                         Text="{Binding Intro,
                                                        Converter={StaticResource HTML2RTFConverter}}">
                        <toolkit:RichTextBox.TextFormatter>
                            <toolkit:RtfFormatter />
                        </toolkit:RichTextBox.TextFormatter>
                        <FlowDocument LineHeight="20" />
                    </toolkit:RichTextBox>
                    <StackPanel>
                        <Grid Height="190"
                              Margin="65,0,65,0"
                              HorizontalAlignment="Stretch">
                            <Grid.Resources>
                                <DataTemplate x:Key="ImageDetailView">
                                    <Border>
                                        <Image Width="264"
                                               Height="190"
                                               Source="{Binding}"
                                               Stretch="Uniform" />
                                    </Border>
                                </DataTemplate>

                            </Grid.Resources>
                            <UserControl x:Name="ucCompanyImageChoose"
                                         Content="{Binding SelectedItem,
                                                           ElementName=listImageList}"
                                         ContentTemplate="{StaticResource ImageDetailView}" />
                            <UserControl x:Name="ucCompanyImageBntChoose"
                                         Panel.ZIndex="3"
                                         Background="Transparent"
                                         Visibility="Visible">
                                <UserControl.Template>
                                    <ControlTemplate>
                                        <Grid x:Name="gdCompanyImageBtnChoose"
                                              Background="Transparent"
                                              Opacity="1"
                                              Visibility="Visible">
                                            <Button HorizontalAlignment="Left"
                                                    Click="LeftCompanyImageChoose_Click"
                                                    Visibility="{Binding SelectedIndex,
                                                                         Converter={StaticResource CompanyImageChooseLeftBtnVisibleConverter},
                                                                         ElementName=listImageList}">
                                                <Button.Template>
                                                    <ControlTemplate>
                                                        <Border Width="25" Height="47">
                                                            <Image x:Name="img" Source="/MagicCube;component/Resources/ImageSingle/ArrowLeftGray.png" />
                                                        </Border>
                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter TargetName="img" Property="Source" Value="/MagicCube;component/Resources/ImageSingle/ArrowLeftBlue.png" />
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Button.Template>
                                            </Button>
                                            <Button x:Name="btnRightCompanyImageChoose"
                                                    HorizontalAlignment="Right"
                                                    Click="RightCompanyImageChoose_Click"
                                                    Visibility="{Binding Tag,
                                                                         ElementName=ucCompanyImageBntChoose}">
                                                <!--<Button.Visibility>
                                                <MultiBinding Converter="{StaticResource CompanyImageChooseRightBtnVisibleConverter}">
                                                    <Binding Path="SelectedIndex" ElementName="listImageList"/>
                                                    <Binding Path="Items" ElementName="listImageList"/>
                                                </MultiBinding>
                                            </Button.Visibility>-->
                                                <!--
                                                    Visibility="{Binding ElementName=ucCompanyImageBntChoose,
                                                    Path=Tag}"
                                                -->
                                                <Button.Template>
                                                    <ControlTemplate>
                                                        <Border Width="25" Height="47">
                                                            <Image x:Name="img" Source="/MagicCube;component/Resources/ImageSingle/ArrowRightGray.png" />
                                                        </Border>
                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter TargetName="img" Property="Source" Value="/MagicCube;component/Resources/ImageSingle/ArrowRightBlue.png" />
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Button.Template>
                                            </Button>

                                        </Grid>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="gdCompanyImageBtnChoose" Property="Opacity" Value="1" />
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </UserControl.Template>

                            </UserControl>

                        </Grid>

                        <ListView x:Name="listImageList"
                                  Height="25"
                                  Margin="40,0,0,0"
                                  Background="Transparent"
                                  BorderThickness="0"
                                  ItemsSource="{Binding ImageUrls}"
                                  MouseLeftButtonUp="listImageList_MouseLeftButtonUp"
                                  ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                  ScrollViewer.VerticalScrollBarVisibility="Disabled"
                                  Visibility="{Binding ImgUrlCount,
                                                       Converter={StaticResource ListCount1ToUnVisibleConverter}}">
                            <ListView.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Width="100"
                                                Height="20"
                                                Background="Transparent"
                                                Orientation="Horizontal" />
                                </ItemsPanelTemplate>
                            </ListView.ItemsPanel>
                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListBoxItem">

                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ListBoxItem">
                                                <Border Height="8" Background="{TemplateBinding Background}">
                                                    <Grid>
                                                        <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                                          VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                                                          TextBlock.Foreground="{TemplateBinding Foreground}" />
                                                        <Border x:Name="bd"
                                                                Width="8"
                                                                Height="8"
                                                                Margin="3,0,3,0"
                                                                HorizontalAlignment="Left"
                                                                Background="#e7e7e7"
                                                                BorderThickness="0"
                                                                CornerRadius="4" />

                                                    </Grid>

                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsSelected" Value="true">
                                                        <Setter TargetName="bd" Property="Background" Value="#00beff" />
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>

                                    <Style.Triggers>
                                        <Trigger Property="IsSelected" Value="true">
                                            <Setter Property="Background" Value="Transparent" />
                                        </Trigger>
                                        <Trigger Property="IsMouseOver" Value="true">
                                            <Setter Property="Background" Value="Transparent" />
                                        </Trigger>
                                        <MultiTrigger>
                                            <MultiTrigger.Conditions>
                                                <Condition Property="IsMouseOver" Value="True" />
                                                <Condition Property="IsSelected" Value="True" />
                                            </MultiTrigger.Conditions>
                                            <Setter Property="Background" Value="Transparent" />
                                        </MultiTrigger>
                                    </Style.Triggers>
                                </Style>
                            </ListView.ItemContainerStyle>
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Border x:Name="bd"
                                            Width="8"
                                            Height="8"
                                            Margin="3,0,3,0"
                                            HorizontalAlignment="Left"
                                            Background="Transparent"
                                            BorderThickness="0"
                                            CornerRadius="4" />
                                </DataTemplate>
                            </ListView.ItemTemplate>



                        </ListView>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Grid>

        <Grid x:Name="gdEditCompany"
              Grid.Row="1"
              HorizontalAlignment="Stretch"
              Background="#ffffff"
              Visibility="Collapsed">
            <Grid.Resources>
                <Style TargetType="TextBlock">
                    <Setter Property="VerticalAlignment" Value="Center" />
                    <Setter Property="HorizontalAlignment" Value="Left" />
                    <Setter Property="TextAlignment" Value="Left" />
                    <Setter Property="Padding" Value="0,9,5,0" />
                    <Setter Property="Height" Value="34" />
                    <Setter Property="Margin" Value="0,0,0,0" />
                    <Setter Property="FontSize" Value="12" />
                    <Setter Property="Foreground" Value="#666666" />
                </Style>
                <Style TargetType="{x:Type ComboBox}">
                    <Setter Property="SnapsToDevicePixels" Value="true" />
                    <Setter Property="Focusable" Value="False" />
                    <Setter Property="Foreground" Value="#333333" />
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type ComboBox}">
                                <ControlTemplate.Resources>
                                    <Storyboard x:Key="FocusedOn">
                                        <DoubleAnimationUsingKeyFrames BeginTime="00:00:00"
                                                                       Storyboard.TargetName="FocusVisualElement"
                                                                       Storyboard.TargetProperty="(UIElement.Opacity)">
                                            <SplineDoubleKeyFrame KeyTime="00:00:00.1000000" Value="1" />
                                        </DoubleAnimationUsingKeyFrames>
                                    </Storyboard>
                                    <Storyboard x:Key="FocusedOff">
                                        <DoubleAnimationUsingKeyFrames BeginTime="00:00:00"
                                                                       Storyboard.TargetName="FocusVisualElement"
                                                                       Storyboard.TargetProperty="(UIElement.Opacity)">
                                            <SplineDoubleKeyFrame KeyTime="00:00:00.3000000" Value="0" />
                                        </DoubleAnimationUsingKeyFrames>
                                    </Storyboard>
                                </ControlTemplate.Resources>
                                <Border BorderBrush="#E5E5E5"
                                        BorderThickness="1"
                                        CornerRadius="1">
                                    <Grid Background="White">
                                        <ToggleButton x:Name="ToggleButton"
                                                      Background="Transparent"
                                                      ClickMode="Press"
                                                      Focusable="False"
                                                      IsChecked="{Binding IsDropDownOpen,
                                                                          Mode=TwoWay,
                                                                          RelativeSource={RelativeSource TemplatedParent}}">
                                            <ToggleButton.Template>
                                                <ControlTemplate TargetType="{x:Type ToggleButton}">
                                                    <ControlTemplate.Resources>
                                                        <Storyboard x:Key="HoverOn">
                                                            <DoubleAnimation Duration="00:00:00.1000000"
                                                                             Storyboard.TargetName="BtnOver"
                                                                             Storyboard.TargetProperty="Opacity"
                                                                             To="0.8" />
                                                            <DoubleAnimation Duration="00:00:00.1000000"
                                                                             Storyboard.TargetName="Background_over"
                                                                             Storyboard.TargetProperty="Opacity"
                                                                             To="1" />
                                                        </Storyboard>
                                                        <Storyboard x:Key="HoverOff">
                                                            <DoubleAnimation Duration="00:00:00.4000000"
                                                                             Storyboard.TargetName="BtnOver"
                                                                             Storyboard.TargetProperty="Opacity"
                                                                             To="0" />
                                                            <DoubleAnimation Duration="00:00:00.4000000"
                                                                             Storyboard.TargetName="Background_over"
                                                                             Storyboard.TargetProperty="Opacity"
                                                                             To="0" />
                                                        </Storyboard>
                                                        <Storyboard x:Key="PressedOn">
                                                            <DoubleAnimation Duration="00:00:00.1000000"
                                                                             Storyboard.TargetName="BtnPress"
                                                                             Storyboard.TargetProperty="Opacity"
                                                                             To="0.8" />
                                                            <DoubleAnimation Duration="00:00:00.1000000"
                                                                             Storyboard.TargetName="Background_press"
                                                                             Storyboard.TargetProperty="Opacity"
                                                                             To="1" />
                                                            <DoubleAnimation Duration="00:00:00.1000000"
                                                                             Storyboard.TargetName="BtnPress_highlight"
                                                                             Storyboard.TargetProperty="Opacity"
                                                                             To="1" />
                                                        </Storyboard>
                                                        <Storyboard x:Key="PressedOff">
                                                            <DoubleAnimation Duration="00:00:00.4000000"
                                                                             Storyboard.TargetName="BtnPress"
                                                                             Storyboard.TargetProperty="Opacity"
                                                                             To="0" />
                                                            <DoubleAnimation Duration="00:00:00.4000000"
                                                                             Storyboard.TargetName="Background_press"
                                                                             Storyboard.TargetProperty="Opacity"
                                                                             To="0" />
                                                            <DoubleAnimation Duration="00:00:00.4000000"
                                                                             Storyboard.TargetName="BtnPress_highlight"
                                                                             Storyboard.TargetProperty="Opacity"
                                                                             To="0" />
                                                        </Storyboard>
                                                    </ControlTemplate.Resources>
                                                    <Grid>
                                                        <Rectangle x:Name="Background"
                                                                   IsHitTestVisible="false"
                                                                   RadiusX="3"
                                                                   RadiusY="3"
                                                                   Stroke="#FFABAEB3"
                                                                   StrokeThickness="0" />
                                                        <Rectangle x:Name="Background_over"
                                                                   IsHitTestVisible="False"
                                                                   Opacity="0"
                                                                   RadiusX="3"
                                                                   RadiusY="3"
                                                                   Stroke="#FFABACAD"
                                                                   StrokeThickness="0" />
                                                        <Rectangle x:Name="Background_press"
                                                                   IsHitTestVisible="False"
                                                                   Opacity="0"
                                                                   RadiusX="3"
                                                                   RadiusY="3"
                                                                   Stroke="#FFABABAB"
                                                                   StrokeThickness="0" />
                                                        <Border x:Name="BtnOver"
                                                                Width="{TemplateBinding ActualWidth}"
                                                                HorizontalAlignment="Right"
                                                                Background="AliceBlue"
                                                                BorderBrush="#FFABABAB"
                                                                BorderThickness="0"
                                                                CornerRadius="3"
                                                                Opacity="0" />
                                                        <Border x:Name="BtnPress"
                                                                Width="{TemplateBinding ActualWidth}"
                                                                HorizontalAlignment="Right"
                                                                Background="AliceBlue"
                                                                BorderBrush="#FF595A5B"
                                                                BorderThickness="0"
                                                                CornerRadius="3"
                                                                Opacity="0" />
                                                        <Border x:Name="BtnPress_highlight"
                                                                Margin="1"
                                                                HorizontalAlignment="Right"
                                                                CornerRadius="2"
                                                                Opacity="0">
                                                            <Border.Background>
                                                                <LinearGradientBrush StartPoint="0,0.5" EndPoint="1,0.5">
                                                                    <GradientStop Offset="0" Color="#FF919191" />
                                                                    <GradientStop Offset="0.088" Color="#A5CED1D2" />
                                                                    <GradientStop Offset="0.221" Color="#0095D9FF" />
                                                                    <GradientStop Offset="0.779" Color="#0095D9FF" />
                                                                    <GradientStop Offset="0.912" Color="#A5CED1D2" />
                                                                    <GradientStop Offset="1" Color="#FF919191" />
                                                                </LinearGradientBrush>
                                                            </Border.Background>
                                                        </Border>
                                                        <Border x:Name="BtnOverlay"
                                                                Margin="1"
                                                                HorizontalAlignment="Right"
                                                                CornerRadius="2">
                                                            <Border.Background>
                                                                <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                                                    <GradientStop Color="#00FFFFFF" />
                                                                    <GradientStop Offset="0.189" Color="#72FFFFFF" />
                                                                    <GradientStop Offset="0.5" Color="#72FFFFFF" />
                                                                    <GradientStop Offset="0.51" Color="#00FFFFFF" />
                                                                </LinearGradientBrush>
                                                            </Border.Background>
                                                        </Border>
                                                        <Path x:Name="BtnArrow"
                                                              Width="8"
                                                              Margin="0,0,7,0"
                                                              HorizontalAlignment="Right"
                                                              Data="F1 M 301.14,-189.041L 311.57,-189.041L 306.355,-182.942L 301.14,-189.041 Z "
                                                              Fill="#ababab"
                                                              Stretch="Uniform" />
                                                        <Rectangle x:Name="DisabledVisualElement"
                                                                   Margin="1"
                                                                   Fill="#00FFFFFF"
                                                                   IsHitTestVisible="false"
                                                                   RadiusX="3"
                                                                   RadiusY="3"
                                                                   StrokeThickness="0"
                                                                   Visibility="Collapsed" />
                                                    </Grid>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="true">
                                                            <Trigger.ExitActions>
                                                                <BeginStoryboard x:Name="HoverOff_BeginStoryboard" Storyboard="{StaticResource HoverOff}" />
                                                            </Trigger.ExitActions>
                                                            <Trigger.EnterActions>
                                                                <BeginStoryboard Storyboard="{StaticResource HoverOn}" />
                                                            </Trigger.EnterActions>
                                                        </Trigger>
                                                        <Trigger Property="IsChecked" Value="true" />
                                                        <Trigger Property="IsPressed" Value="True">
                                                            <Trigger.ExitActions>
                                                                <BeginStoryboard x:Name="PressedOff_BeginStoryboard" Storyboard="{StaticResource PressedOff}" />
                                                            </Trigger.ExitActions>
                                                            <Trigger.EnterActions>
                                                                <BeginStoryboard x:Name="PressedOn_BeginStoryboard" Storyboard="{StaticResource PressedOn}" />
                                                            </Trigger.EnterActions>
                                                        </Trigger>

                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </ToggleButton.Template>
                                        </ToggleButton>
                                        <TextBlock x:Name="ValueTextBox"
                                                   Margin="14,3,23,3"
                                                   HorizontalAlignment="Left"
                                                   VerticalAlignment="Center"
                                                   Background="Transparent"
                                                   Focusable="True"
                                                   FontSize="12"
                                                   Foreground="Black"
                                                   IsHitTestVisible="False"
                                                   Text="{TemplateBinding SelectedValue}"
                                                   Visibility="Visible" />
                                        <Popup x:Name="Popup"
                                               AllowsTransparency="True"
                                               Focusable="False"
                                               IsOpen="{TemplateBinding IsDropDownOpen}"
                                               Placement="Bottom"
                                               PopupAnimation="None">
                                            <Grid x:Name="DropDown"
                                                  MinWidth="{TemplateBinding ActualWidth}"
                                                  MaxHeight="{TemplateBinding MaxDropDownHeight}"
                                                  SnapsToDevicePixels="True">
                                                <Border x:Name="DropDownBorder"
                                                        Background="#FFFFFFFF"
                                                        BorderThickness="1"
                                                        CornerRadius="3,3,3,3">
                                                    <Border.BorderBrush>
                                                        <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                                            <GradientStop Offset="0" Color="#FFABAEB3" />
                                                            <GradientStop Offset="0.355" Color="#FFD4D7D9" />
                                                        </LinearGradientBrush>
                                                    </Border.BorderBrush>
