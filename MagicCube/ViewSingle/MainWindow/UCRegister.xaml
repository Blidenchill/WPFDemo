                                                                    </Trigger.ExitActions>
                                                                    <Trigger.EnterActions>
                                                                        <BeginStoryboard x:Name="PressedOn_BeginStoryboard" Storyboard="{StaticResource PressedOn}" />
                                                                    </Trigger.EnterActions>
                                                                </Trigger>

                                                            </ControlTemplate.Triggers>
                                                        </ControlTemplate>
