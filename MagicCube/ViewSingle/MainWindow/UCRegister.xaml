                                                                <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                                                    <GradientStop Offset="0" Color="#FFABAEB3" />
                                                                    <GradientStop Offset="0.355" Color="#FFD4D7D9" />
                                                                </LinearGradientBrush>
