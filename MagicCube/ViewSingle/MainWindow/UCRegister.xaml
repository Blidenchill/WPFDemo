<UserControl x:Class="MagicCube.ViewSingle.UCRegister"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:BConvert="clr-namespace:MagicCube.BindingConvert"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:input="clr-namespace:System.Windows.Input;assembly=PresentationCore"
             xmlns:local="clr-namespace:MagicCube.ViewSingle"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:templateUC="clr-namespace:MagicCube.TemplateUC"
             xmlns:view="clr-namespace:MagicCube.View"
             d:DesignHeight="1655"
             d:DesignWidth="926"
             mc:Ignorable="d">
    <Grid x:Name="gdMain">
        <Grid.Resources>
            <BConvert:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
            <BConvert:URLToImageConverter x:Key="URLToImageConverter" />
            <BConvert:URLToUploadImageConverter x:Key="URLToUploadImageConverter" />
            <BConvert:URLToUploadVisibleConverter x:Key="URLToUploadVisibleConverter" />
            <BConvert:StringNullToVisibilityConverter x:Key="StringNullToVisibilityConverter" />
            <BConvert:ListCountNegativeToVisibleConverter x:Key="ListCountNegativeToVisibleConverter" />
            <BConvert:StringVisibilityConverter x:Key="StringVisibilityConverter" />
            <BConvert:ListToVisibilityConvert x:Key="ListToVisibilityConvert" />
        </Grid.Resources>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="228" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Popup x:Name="popupAuto"
               HorizontalAlignment="Left"
               AllowsTransparency="True"
               IsOpen="False"
               PopupAnimation="None"
               StaysOpen="False">
            <Border Width="324"
                    MaxHeight="328"
                    Background="White"
                    BorderThickness="1">
                <Border.Resources>
                    <Style TargetType="ScrollViewer">
                        <Setter Property="Template" Value="{DynamicResource ScrollViewerControlTemplate1}" />
                    </Style>
                </Border.Resources>
                <ListBox x:Name="popupAutoList"
                         MaxHeight="328"
                         Background="#f8f9fc"
                         FocusVisualStyle="{x:Null}"
                         PreviewKeyDown="popupAutoList_PreviewKeyDown"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                         ScrollViewer.VerticalScrollBarVisibility="Auto">
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <!--<EventSetter Event="PreviewMouseLeftButtonDown" Handler="ListBoxItem_MouseDownClick" />-->
                            <!--  设置控件模板  -->
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListBoxItem">
                                        <Border Height="32"
                                                Background="{TemplateBinding Background}"
                                                BorderThickness="0">
                                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                                              TextBlock.Foreground="{TemplateBinding Foreground}" />
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>

                            <!--  设置触发器  -->
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="true">
                                    <Setter Property="Background" Value="AliceBlue" />
                                </Trigger>
                                <Trigger Property="IsMouseOver" Value="true">
                                    <Setter Property="Background" Value="Transparent" />
                                </Trigger>
                                <MultiTrigger>
                                    <MultiTrigger.Conditions>
                                        <Condition Property="IsMouseOver" Value="True" />
                                        <Condition Property="IsSelected" Value="True" />
                                    </MultiTrigger.Conditions>
                                    <Setter Property="Background" Value="Transparent" />
                                </MultiTrigger>
                            </Style.Triggers>
                        </Style>
                    </ListBox.ItemContainerStyle>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel>
                                <TextBlock x:Name="tb"
                                           Width="378"
                                           Height="32"
                                           Background="Transparent"
                                           Cursor="Hand"
                                           Foreground="#333333"
                                           MouseLeftButtonDown="tb_MouseLeftButtonDown"
                                           Padding="10"
                                           Text="{Binding}"
                                           TextAlignment="Left" />
                            </StackPanel>
                            <DataTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="true">
                                    <Setter TargetName="tb" Property="Background" Value="AliceBlue" />
                                </Trigger>

                            </DataTemplate.Triggers>
                        </DataTemplate>

                    </ItemsControl.ItemTemplate>

                </ListBox>
                <!--<ScrollViewer x:Name="scrollResum"
                              Margin="0,0,0,0"
                              Template="{DynamicResource ScrollViewerControlTemplate1}"
                              VerticalScrollBarVisibility="Auto">
                    <Border Width="{Binding ElementName=stkMain,
                                            Path=Width}"
                            Margin="0,4,0,0"
                            BorderBrush="White"
                            BorderThickness="0"
                            CornerRadius="3">

                    </Border>
                </ScrollViewer>-->
            </Border>
        </Popup>
        <Grid x:Name="gdConfirmCompanyName"
              Grid.ColumnSpan="2"
              Panel.ZIndex="1"
              Background="#80000000"
              Visibility="Collapsed">
            <Border Width="500"
                    Height="235"
                    Background="#ffffff"
                    CornerRadius="2">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="42" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid>
                        <TextBlock Margin="20,0,0,0"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Center"
                                   FontSize="14"
                                   Foreground="#666666"
                                   Text="温馨提示" />
                        <templateUC:CloseButton HorizontalAlignment="Right" Click="btnCompanyNameCancel_Click" />
                        <Rectangle Height="1"
                                   VerticalAlignment="Bottom"
                                   Fill="#eeeeee" />
                    </Grid>
                    <StackPanel Grid.Row="1" Margin="0,40,0,0">
                        <TextBlock HorizontalAlignment="Center"
                                   FontSize="14"
                                   Foreground="#666666"
                                   Text="信息保存后公司全称将无法修改，请您仔细核对" />
                        <StackPanel Margin="0,5,0,0"
                                    HorizontalAlignment="Center"
                                    Orientation="Horizontal">
                            <TextBlock FontSize="14"
                                       Foreground="#666666"
                                       Text="公司全称：" />
                            <TextBlock MaxWidth="300"
                                       FontSize="14"
                                       Foreground="#ff6500"
                                       Text="{Binding CompanyName}"
                                       TextTrimming="WordEllipsis" />
                        </StackPanel>
                        <StackPanel Margin="0,40,0,0"
                                    HorizontalAlignment="Center"
                                    Orientation="Horizontal">
                            <templateUC:BlueButton Width="94"
                                                   Height="34"
                                                   Click="btnCompanyNameConfirm_Click"
                                                   Text="确认无误" />
                            <templateUC:WhiteButton Width="94"
                                                    Height="34"
                                                    Margin="10,0,0,0"
                                                    Click="btnCompanyNameCancel_Click"
                                                    Text="我要修改" />
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <Grid x:Name="gdUploadAuthOK"
              Grid.ColumnSpan="2"
              Panel.ZIndex="1"
              Background="#80000000"
              Visibility="Collapsed">
            <Border Width="500"
                    Height="203"
                    Background="#ffffff"
                    CornerRadius="2">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="42" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid>
                        <TextBlock Margin="20,0,0,0"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Center"
                                   FontSize="14"
                                   Foreground="#666666"
                                   Text="温馨提示" />
                        <templateUC:CloseButton HorizontalAlignment="Right" Click="btnCloseAuthenOKPanel_Click" />
                        <Rectangle Height="1"
                                   VerticalAlignment="Bottom"
                                   Fill="#eeeeee" />
                    </Grid>
                    <StackPanel Grid.Row="1" Margin="0,40,0,0">
                        <TextBlock HorizontalAlignment="Center"
                                   FontSize="14"
                                   Foreground="#666666"
                                   Text="认证申请已提交，将在2个工作日内审核完成" />
                        <templateUC:BlueButton Width="110"
                                               Height="34"
                                               Margin="0,40,0,0"
                                               Click="btnCloseAuthenOKPanel_Click"
                                               Text="我知道了" />

                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
        <Grid x:Name="gdIndustry"
              Grid.ColumnSpan="2"
              Panel.ZIndex="1"
              Background="#80000000"
              Visibility="{Binding ElementName=chkIndustryShow,
                                   Path=IsChecked,
                                   Converter={StaticResource BoolToVisibilityConverter}}">
            <Grid.Resources>
                <BConvert:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
                <Style TargetType="{x:Type CheckBox}">
                    <Setter Property="OverridesDefaultStyle" Value="True" />
                    <Setter Property="Margin" Value="0,8,0,8" />
                    <Setter Property="SnapsToDevicePixels" Value="True" />
                    <Setter Property="Foreground" Value="#666666" />
                    <Setter Property="FontSize" Value="12" />
                    <Setter Property="Cursor" Value="Hand" />
                    <Setter Property="FocusVisualStyle" Value="{x:Null}" />
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type CheckBox}">
                                <BulletDecorator VerticalAlignment="Top"
                                                 Background="Transparent"
                                                 FlowDirection="LeftToRight">
                                    <BulletDecorator.Bullet>
                                        <Image x:Name="img"
                                               Width="16"
                                               Height="16"
                                               Margin="0,0,0,0"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Top"
                                               Source="/MagicCube;component/Resources/Images/Mcheckno.png" />
                                    </BulletDecorator.Bullet>

                                    <ContentPresenter Margin="10,0" VerticalAlignment="Center" />

                                </BulletDecorator>
                                <!--
                                    控件触发器
                                -->
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsChecked" Value="True">
                                        <!--  画上一个勾  -->
                                        <Setter TargetName="img" Property="Source" Value="/MagicCube;component/Resources/Images/Mcheck.png" />
                                        <!--<Setter TargetName="bd" Property="Background" Value="#5192ff" />-->
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>

                </Style>
            </Grid.Resources>
            <Border Width="540"
                    Height="469"
                    Background="#f8f9fc"
                    BorderBrush="#e5e5e5"
                    BorderThickness="1"
                    IsVisibleChanged="IndustryBorder_IsVisibaleChanged"
                    Visibility="Visible">
                <StackPanel>
                    <TextBlock Margin="13,18,0,8"
                               FontSize="14"
                               Foreground="#666666"
                               Style="{x:Null}"
                               Text="请选择公司所属行业，最多可选3个" />

                    <ItemsControl x:Name="itemsIndustries" Margin="15,0,15,0">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Width="160">
                                    <CheckBox Click="chkIndustry_Click" IsChecked="{Binding isChoose}">
                                        <CheckBox.Content>
                                            <TextBlock Width="100"
                                                       Text="{Binding name}"
                                                       TextWrapping="Wrap" />
                                        </CheckBox.Content>

                                    </CheckBox>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                    <StackPanel Margin="178, 20,0,0" Orientation="Horizontal">
                        <templateUC:BlueButton Width="80"
                                               Height="34"
                                               Click="IndustrySelectOK_Click"
                                               Text="确定" />
                        <templateUC:WhiteButton Width="80"
                                                Height="34"
                                                Margin="10,0,0,0"
                                                Click="IndustrySelectCancel_Click"
                                                Text="取消" />
                    </StackPanel>
                </StackPanel>

            </Border>
        </Grid>
        <StackPanel Grid.Column="0"
                    Background="#f6f6f6"
                    Orientation="Vertical">
            <templateUC:SecondModuleRB x:Name="rbSelfInfo"
                                       Click="rbSelfInfo_Click"
                                       IsEnabled="False"
                                       Text="个人信息" />
            <templateUC:SecondModuleRB x:Name="rbCompanyInfo"
                                       Click="rbCompanyInfo_Click"
                                       IsChecked="True"
                                       IsEnabled="False"
                                       Text="公司信息" />
            <templateUC:SecondModuleRB x:Name="rbAuthen"
                                       Click="rbAuthen_Click"
                                       IsEnabled="False"
                                       Text="认证账号" />
        </StackPanel>
        <Grid x:Name="gdEditPerson"
              Grid.Column="1"
              Visibility="{Binding ElementName=rbSelfInfo,
                                   Path=IsChecked,
                                   Converter={StaticResource BoolToVisibilityConverter}}">
            <Grid Grid.Row="1"
                  Margin="0,0,0,0"
                  Visibility="Visible">
                <Grid.Resources>
                    <Style TargetType="TextBlock">
                        <Setter Property="VerticalAlignment" Value="Center" />
                        <Setter Property="HorizontalAlignment" Value="Right" />
                        <Setter Property="TextAlignment" Value="Right" />
                        <Setter Property="Padding" Value="0,9,5,0" />
                        <Setter Property="Height" Value="34" />
                        <Setter Property="Margin" Value="0,0,0,0" />
                        <Setter Property="FontSize" Value="12" />
                        <Setter Property="Foreground" Value="#666666" />
                    </Style>
                </Grid.Resources>
                <Grid.RowDefinitions>
                    <RowDefinition Height="60" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid>
                    <TextBlock HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontSize="16"
                               Foreground="#333333"
                               Style="{x:Null}"
                               Text="个人信息" />
                </Grid>
                <Grid Grid.Row="1" Background="#ffffff">
                    <StackPanel Margin="15,34,0,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Margin="50,0,0,0"
                                       Foreground="Red"
                                       Text="*" />
                            <TextBlock Width="30" Text="头像" />
                            <Grid Margin="24,0,0,0" HorizontalAlignment="Left">
                                <Button x:Name="btnAddHeadPicture"
                                        Width="80"
                                        Height="80"
                                        Click="btnAddHeadPicture_Click"
                                        FocusVisualStyle="{x:Null}">
                                    <Button.Template>
                                        <ControlTemplate>
                                            <Border Width="80"
                                                    Height="80"
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"
                                                    BorderThickness="0"
                                                    CornerRadius="3">
                                                <Border.Background>
                                                    <ImageBrush ImageSource="{Binding AvatarUrl, Converter={StaticResource URLToUploadImageConverter}}" />
                                                </Border.Background>
                                                <!--<Image Width="80" Source="/MagicCube;component/Resources/Images/UploadBtn.png" />-->
                                                <Grid>
                                                    <Grid Visibility="{Binding AvatarUrl, Converter={StaticResource URLToUploadVisibleConverter}}">
                                                        <Rectangle Fill="Black"
                                                                   Opacity="0.5"
                                                                   RadiusX="3"
                                                                   RadiusY="3" />
                                                        <Image Width="27"
                                                               Height="27"
                                                               Source="/MagicCube;component/Resources/ImageSingle/uploadBackground.png" />

                                                    </Grid>

                                                </Grid>

                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Cursor" Value="Hand" />
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>

                            </Grid>



                            <StackPanel Margin="16,20,0,0">
                                <TextBlock Margin="0,3,0,3"
                                           Foreground="#999999"
                                           Style="{x:Null}"
                                           Text="支持JPG/PNG格式" />
                                <TextBlock Margin="0,3,0,3"
                                           Foreground="#ff6500"
                                           Style="{x:Null}"
                                           Text="真实头像更容易增进信任度，招聘效果更好哦~" />
                            </StackPanel>

                        </StackPanel>
                        <TextBlock x:Name="tbErrorAvatarUrl"
                                   Margin="120,5,0,0"
                                   HorizontalAlignment="Left"
                                   Foreground="Red"
                                   Style="{x:Null}"
                                   Text="请上传头像"
                                   Visibility="Collapsed" />
                        <StackPanel Margin="0,14,0,0" Orientation="Horizontal">
                            <TextBlock Margin="50,0,0,0"
                                       Foreground="Red"
                                       Text="*" />
                            <TextBlock Text="姓名" />
                            <Grid Margin="24,0,0,0">
                                <Rectangle x:Name="rectName"
                                           Width="324"
                                           Height="34"
                                           Fill="Transparent"
                                           Stroke="#e5e5e5"
                                           StrokeThickness="1" />
                                <templateUC:HintTextBox x:Name="txtNameEdit"
                                                        Width="314"
                                                        Height="34"
                                                        Margin="4,0,0,0"
                                                        VerticalContentAlignment="Center"
                                                        BorderThickness="0"
                                                        FontSize="12"
                                                        Foreground="#333333"
                                                        GotFocus="GotFocus_Event"
                                                        Hint="请填写真实姓名"
                                                        LostFocus="txtNameEdit_LostFocus"
                                                        Padding="0,0,0,0"
                                                        Text="{Binding UserName,
                                                                       UpdateSourceTrigger=PropertyChanged}"
                                                        TextChanged="txtNameEdit_TextChanged" />
                            </Grid>
                        </StackPanel>
                        <TextBlock x:Name="tbErrorName"
                                   Margin="120,5,0,0"
                                   HorizontalAlignment="Left"
                                   Foreground="Red"
                                   Style="{x:Null}"
                                   Text="请填写姓名"
                                   Visibility="Collapsed" />
                        <StackPanel Margin="0,14,0,0" Orientation="Horizontal">
                            <TextBlock Margin="50,0,0,0"
                                       Foreground="Red"
                                       Text="*" />
                            <TextBlock Text="职位" />
                            <Grid Margin="24,0,0,0">
                                <Rectangle x:Name="rectPosition"
                                           Width="324"
                                           Height="34"
                                           Fill="White"
                                           RadiusX="3"
                                           RadiusY="3"
                                           Stroke="#e5e5e5"
                                           StrokeThickness="1" />
                                <templateUC:HintTextBox x:Name="txtPosition"
                                                        Width="314"
                                                        Height="34"
                                                        Margin="4,0,0,0"
                                                        VerticalContentAlignment="Center"
                                                        BorderThickness="0"
                                                        FontSize="12"
                                                        Foreground="#333333"
                                                        GotFocus="GotFocus_Event"
                                                        Hint="请填写您任职的职位名称"
                                                        LostFocus="txtPosition_LostFocus"
                                                        Padding="0,0,0,0"
                                                        Text="{Binding Position,
                                                                       UpdateSourceTrigger=PropertyChanged}"
                                                        TextChanged="txtPosition_TextChanged" />
                            </Grid>

                        </StackPanel>
                        <TextBlock x:Name="tbErrorPosition"
                                   Margin="120,5,0,0"
                                   HorizontalAlignment="Left"
                                   Foreground="Red"
                                   Style="{x:Null}"
                                   Text="请填写职位"
                                   Visibility="Collapsed" />
                        <StackPanel Margin="0,14,0,0" Orientation="Horizontal">
                            <TextBlock Margin="50,0,0,0"
                                       Foreground="Red"
                                       Text="*" />
                            <TextBlock Text="邮箱" />
                            <Grid Margin="24,0,0,0">
                                <Rectangle x:Name="rectEmail"
                                           Width="324"
                                           Height="34"
                                           Fill="White"
                                           RadiusX="3"
                                           RadiusY="3"
                                           Stroke="#e5e5e5"
                                           StrokeThickness="1" />
                                <templateUC:HintTextBox x:Name="txtEmail"
                                                        Width="314"
                                                        Height="34"
                                                        Margin="4,0,0,0"
                                                        VerticalContentAlignment="Center"
                                                        BorderThickness="0"
                                                        FontSize="12"
                                                        Foreground="#333333"
                                                        GotFocus="GotFocus_Event"
                                                        Hint="请填写您的常用邮箱"
                                                        LostFocus="txtEmail_LostFocus"
                                                        MaxLength="100"
                                                        Padding="0,0,0,0"
                                                        Text="{Binding Email,
                                                                       UpdateSourceTrigger=PropertyChanged}" />
                            </Grid>
                        </StackPanel>
                        <TextBlock x:Name="tbErrorEmail"
                                   Margin="120,5,0,0"
                                   HorizontalAlignment="Left"
                                   Foreground="Red"
                                   Style="{x:Null}"
                                   Text="请填写邮箱"
                                   Visibility="Collapsed" />
                        <Line Width="449"
                              Margin="40,20,0,20"
                              HorizontalAlignment="Left"
                              Stroke="#e7e7e7"
                              StrokeDashArray="5,4"
                              StrokeThickness="1"
                              X1="0"
                              X2="449" />

                        <StackPanel Margin="0,14,0,0" Orientation="Horizontal">
                            <TextBlock Margin="26,0,0,0"
                                       Foreground="Red"
                                       Text="*" />
                            <TextBlock Text="公司全称" />
                            <Grid x:Name="gdCompnayName" Margin="24,0,0,0">
                                <Rectangle x:Name="rectCompanyName"
                                           Width="324"
                                           Height="34"
                                           Fill="White"
                                           RadiusX="3"
                                           RadiusY="3"
                                           Stroke="#e5e5e5"
                                           StrokeThickness="1" />
                                <templateUC:HintTextBox x:Name="txtCompanyName"
                                                        Width="284"
                                                        Height="34"
                                                        Margin="7,0,30,0"
                                                        VerticalContentAlignment="Center"
                                                        BorderThickness="0"
                                                        FontSize="12"
                                                        Foreground="#333333"
                                                        GotFocus="GotFocus_Event"
                                                        Hint="请填写营业执照上的公司全称"
                                                        LostFocus="txtCompanyName_LostFocus"
                                                        Padding="0,0,0,0"
                                                        Text="{Binding CompanyName,
                                                                       UpdateSourceTrigger=PropertyChanged}"
                                                        TextChanged="txtCompanyName_TextChanged" />
                                <Button Margin="0,0,10,0"
                                        HorizontalAlignment="Right"
                                        Click="btnClearCompanyName_Click"
                                        Cursor="Hand"
                                        Visibility="{Binding ElementName=txtCompanyName,
                                                             Path=Text,
                                                             Converter={StaticResource StringVisibilityConverter}}">
                                    <Button.Template>
                                        <ControlTemplate>
                                            <Border Width="14"
                                                    Height="14"
                                                    Background="#b4b4b4"
                                                    CornerRadius="7">
                                                <Path Width="10"
                                                      Height="10"
                                                      HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"
                                                      Data="M 2,2 L2,2 8,8 M 8,2 L 8,2, 2,8"
                                                      Stroke="White" />
                                            </Border>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                            </Grid>
                        </StackPanel>
                        <TextBlock Margin="115,0,0,0"
                                   HorizontalAlignment="Left"
                                   Foreground="#ff6500"
                                   Text="* 请输入与公司营业执照一致的公司全称，审核通过后不可更改" />
                        <TextBlock x:Name="tbErrorCompanyName"
                                   Margin="120,5,0,0"
                                   HorizontalAlignment="Left"
                                   Foreground="Red"
                                   Style="{x:Null}"
                                   Text="请填写公司全称"
                                   Visibility="Collapsed" />
                        <templateUC:BlueButton Width="170"
                                               Height="34"
                                               Margin="122,40,0,0"
                                               HorizontalAlignment="Left"
                                               Click="btnSelfInfoNext_Click"
                                               Text="下一步，填写公司信息" />
                    </StackPanel>
                </Grid>

            </Grid>
        </Grid>

        <Grid x:Name="gdEditCompany"
              Grid.Column="1"
              Visibility="{Binding ElementName=rbCompanyInfo,
                                   Path=IsChecked,
                                   Converter={StaticResource BoolToVisibilityConverter}}">

            <Grid.RowDefinitions>
                <RowDefinition Height="60" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid>
                <TextBlock HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Background="White"
                           FontSize="16"
                           Foreground="#333333"
                           Text="公司信息" />
            </Grid>

            <Grid x:Name="gdProvinceCity"
                  Grid.RowSpan="2"
                  Margin="-300,0,0,0"
                  Panel.ZIndex="1"
                  d:IsHidden="True"
                  Background="#82000000"
                  Visibility="{Binding ElementName=chkProvineCity,
                                       Path=IsChecked,
                                       Converter={StaticResource BoolToVisibilityConverter}}">
                <templateUC:UCProvinceCity x:Name="ucProvinceCity"
                                           Width="620"
                                           Height="581"
                                           ForceSecondSelcted="True"
                                           MostSelectedNum="1"
                                           StrTitle="最多选择1项" />
            </Grid>
            <Grid Grid.Row="1">
                <Grid Grid.Row="1"
                      HorizontalAlignment="Stretch"
                      Background="#ffffff"
                      Visibility="Visible">
                    <Grid.Resources>
                        <Style TargetType="TextBlock">
                            <Setter Property="VerticalAlignment" Value="Center" />
                            <Setter Property="HorizontalAlignment" Value="Left" />
                            <Setter Property="TextAlignment" Value="Left" />
                            <Setter Property="Padding" Value="0,9,5,0" />
                            <Setter Property="Height" Value="34" />
                            <Setter Property="Margin" Value="0,0,0,0" />
                            <Setter Property="FontSize" Value="12" />
                            <Setter Property="Foreground" Value="#666666" />
                        </Style>
                        <Style TargetType="{x:Type ComboBox}">
