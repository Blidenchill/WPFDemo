                                                           SnapsToDevicePixels="True" />
                                                <TextBlock VerticalAlignment="Center"
                                                           FontSize="13"
                                                           Text="{Binding TagContent}" />
                                            </StackPanel>
                                        </CheckBox.Content>
                                    </CheckBox>
                                </StackPanel>

                                <DataTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="stk" Property="Background" Value="AliceBlue" />
                                    </Trigger>
                                </DataTemplate.Triggers>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                    <Viewbox>
                        <Line Margin="0,5,0,5"
                              Stroke="#ecf1fc"
                              StrokeThickness="1"
                              X1="0"
                              X2="200"
                              Y1="0"
                              Y2="0" />
                    </Viewbox>
                    <Button Height="30"
                            Click="btnTagAdd_Click"
                            Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate>
                                <Border>
                                    <StackPanel x:Name="stk" Orientation="Horizontal">
                                        <Image Width="15"
                                               Height="15"
                                               Source="/MagicCube;component/Resources/Images/icon_BlueAdd.png" />
                                        <TextBlock Margin="15,0,0,0"
                                                   VerticalAlignment="Center"
                                                   FontSize="13"
                                                   Text="新建标记" />
                                    </StackPanel>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="stk" Property="Background" Value="AliceBlue" />
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                    <Button Height="30"
                            Click="btnTagManager_Click"
                            Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate>
                                <Border>
                                    <StackPanel x:Name="stk" Orientation="Horizontal">
                                        <Image Width="15"
                                               Height="15"
                                               Source="/MagicCube;component/Resources/Images/icon_Manage.png" />
                                        <TextBlock Margin="15,0,0,0"
                                                   VerticalAlignment="Center"
                                                   FontSize="13"
                                                   Text="管理标记" />
                                    </StackPanel>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="stk" Property="Background" Value="AliceBlue" />
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </Border>
        </Popup>
    </Grid>
</UserControl>
