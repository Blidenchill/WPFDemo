                                                               FontSize="14"
                                                               Foreground="#333333"
                                                               Text="{Binding Path=name}"
                                                               TextTrimming="WordEllipsis" />
                                                </StackPanel>
                                                <StackPanel Margin="0,5,0,0"
                                                            HorizontalAlignment="Left"
                                                            Orientation="Horizontal">
