                                    <TextBlock FontSize="13"
                                               Foreground="#74829c"
                                               Text=" 聊起来" />
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                        <Grid Visibility="{Binding OpenPhblish, Converter={StaticResource BoolToCollapsedConverter}}">
