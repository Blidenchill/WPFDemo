                                      Template="{StaticResource ListViewTree}">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid x:Name="bgd"
                                              Width="{Binding ElementName=lstRecommend,
                                                              Path=ActualWidth}"
                                              Height="56"
                                              Margin="-3,0,-2,0"
                                              HorizontalAlignment="Left"
                                              Background="Transparent"
                                              MouseLeftButtonDown="bgdRecommend_MouseLeftButtonDown"
                                              MouseRightButtonDown="bgdRecommend_MouseRightButtonDown">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="60" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <Border Width="40"
                                                    Height="40"
                                                    Margin="15,0,0,0"
                                                    BorderBrush="AliceBlue"
                                                    BorderThickness="0"
                                                    CornerRadius="2">
                                                <Border.Background>
                                                    <ImageBrush ImageSource="/MagicCube;component/Resources/Images/UserDefault.png" />
                                                </Border.Background>
                                                <Border Width="40"
                                                        Height="40"
                                                        CornerRadius="2">
                                                    <Border.Background>
                                                        <ImageBrush ImageSource="{Binding Path=avatarUrl}" />
                                                    </Border.Background>
                                                </Border>
                                            </Border>
                                            <StackPanel Grid.Column="1"
                                                        Margin="8,10,0,0"
                                                        Orientation="Vertical">
                                                <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
                                                    <TextBlock MaxWidth="50"
                                                               VerticalAlignment="Bottom"
                                                               FontSize="14"
                                                               Foreground="#333333"
                                                               Text="{Binding Path=name}"
                                                               TextTrimming="WordEllipsis" />
                                                    <TextBlock MaxWidth="60"
                                                               Margin="10,0,0,0"
