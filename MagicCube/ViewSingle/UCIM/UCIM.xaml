                                      Template="{StaticResource ListViewTree}">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid x:Name="bgdDynamic"
                                              Width="{Binding ElementName=lstJobDynamic,
                                                              Path=ActualWidth}"
                                              Height="55"
                                              Margin="-3,0,-2,0"
                                              HorizontalAlignment="Left"
                                              Background="Transparent"
                                              MouseLeftButtonDown="bgdDynamic_MouseLeftButtonDown"
                                              MouseRightButtonDown="bgdDynamic_MouseRightButtonDown">

                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="60" />
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="30" />
                                            </Grid.ColumnDefinitions>
                                            <Border Width="40"
                                                    Height="40"
                                                    Margin="15,0,0,0"
                                                    BorderBrush="AliceBlue"
                                                    BorderThickness="0"
                                                    CornerRadius="2">
                                                <Border.Background>
                                                    <ImageBrush ImageSource="{Binding Path=gender, Converter={StaticResource GenderToUrlConverter}}" />
                                                </Border.Background>
                                                <Border Width="40"
                                                        Height="40"
                                                        CornerRadius="2">
                                                    <Border.Background>
                                                        <ImageBrush ImageSource="{Binding Path=avatarUrl}" />
                                                    </Border.Background>
                                                </Border>

                                            </Border>
                                            <Border Width="10"
                                                    Height="10"
                                                    Margin="49,6,0,0"
                                                    HorizontalAlignment="Left"
                                                    VerticalAlignment="Top"
                                                    Background="#ff5555"
