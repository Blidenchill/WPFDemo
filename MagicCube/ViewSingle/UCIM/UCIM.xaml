                                                    <UC:UCStringItem DataContext="{Binding lstPerInfo}"
                                                                     RectangleColor="#B4B4B4"
                                                                     TextColor="#999999" />
                                                </StackPanel>
                                            </StackPanel>
                                        </Grid>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </StackPanel>
                    </ScrollViewer>
                    <Grid x:Name="tabHintRecommend" Visibility="Collapsed">
