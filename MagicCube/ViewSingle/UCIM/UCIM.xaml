                                                    Visibility="{Binding Path=IsJobRead,
                                                                         Converter={StaticResource BoolToCollapsedConverter}}" />

                                            <StackPanel Grid.Column="1"
                                                        Margin="5,10,0,0"
                                                        Orientation="Vertical">
                                                <Grid>
                                                    <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
                                                        <TextBlock MaxWidth="80"
                                                                   VerticalAlignment="Bottom"
                                                                   FontSize="13"
                                                                   Foreground="#333333"
                                                                   Text="{Binding Path=name}"
                                                                   TextTrimming="WordEllipsis" />
                                                    </StackPanel>

                                                </Grid>
                                                <StackPanel Margin="0,5,0,0"
                                                            HorizontalAlignment="Left"
                                                            Orientation="Horizontal">
                                                    <StackPanel.Resources>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="FontSize" Value="12" />
                                                            <Setter Property="Foreground" Value="#8490a4" />
                                                        </Style>
                                                    </StackPanel.Resources>
                                                    <TextBlock FontSize="12"
                                                               Foreground="#999999"
                                                               Text="查看了  "
                                                               Visibility="{Binding IsCollectJob,
                                                                                    Converter={StaticResource BoolToCollapsedConverter}}" />
                                                    <TextBlock FontSize="12"
                                                               Foreground="#999999"
                                                               Text="收藏了  "
                                                               Visibility="{Binding IsCollectJob,
                                                                                    Converter={StaticResource BoolToVisibilityConverter}}" />
                                                    <TextBlock MaxWidth="80"
                                                               FontSize="12"
                                                               Foreground="#303342"
                                                               Text="{Binding Path=job}"
                                                               TextTrimming="WordEllipsis" />
                                                </StackPanel>

                                            </StackPanel>

                                            <TextBlock Grid.Column="1"
                                                       Grid.ColumnSpan="2"
                                                       Margin="0,15,8,0"
                                                       HorizontalAlignment="Right"
                                                       VerticalAlignment="Top"
                                                       FontSize="11"
                                                       Foreground="Gray"
                                                       Text="{Binding CreateTime,
                                                                      Converter={StaticResource LastTimeConverter}}"
                                                       Visibility="Visible" />
                                        </Grid>

                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </StackPanel>
                    </ScrollViewer>
                    <Grid x:Name="tabHintDynamic">
                        <Grid Visibility="{Binding OpenPhblish, Converter={StaticResource BoolToVisibilityConverter}}">
