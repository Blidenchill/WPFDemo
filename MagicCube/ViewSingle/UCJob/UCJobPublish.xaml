<UserControl x:Class="MagicCube.ViewSingle.UCJobPublish"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:BConvert="clr-namespace:MagicCube.BindingConvert"
             xmlns:HtmlEditor="clr-namespace:MagicCube.View"
             xmlns:UC="clr-namespace:MagicCube.TemplateUC"
             xmlns:UCViewSingle="clr-namespace:MagicCube.ViewSingle"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:toolkit="http://schemas.xceed.com/wpf/xaml/toolkit"
             d:DesignHeight="1800"
             d:DesignWidth="700"
             mc:Ignorable="d">
    <UserControl.Resources>
        <BConvert:ListToStringConverter x:Key="ListToStringConverter" />
        <BConvert:StringVisibilityConverter x:Key="StringVisibilityConverter" />
        <BConvert:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        <BConvert:BoolToCollapsedConverter x:Key="BoolToCollapsedConverter" />
        <BConvert:HTML2RTFConverter x:Key="HTML2RTFConverter" />
        <BConvert:StringNullToVisibilityConverter x:Key="StringNullToVisibilityConverter" />
        <Style TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Microsoft YaHei" />
        </Style>

        <Style TargetType="{x:Type CheckBox}">
            <Setter Property="OverridesDefaultStyle" Value="True" />
            <Setter Property="SnapsToDevicePixels" Value="True" />
            <Setter Property="Foreground" Value="Black" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type CheckBox}">
                        <BulletDecorator VerticalAlignment="Center"
                                         Background="Transparent"
                                         FlowDirection="LeftToRight">
                            <BulletDecorator.Bullet>
                                <Image x:Name="img"
                                       Width="16"
                                       Height="16"
                                       Margin="0,0,0,0"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Source="/MagicCube;component/Resources/Images/Mcheckno.png" />
                            </BulletDecorator.Bullet>
                            <ContentPresenter Margin="10,0" VerticalAlignment="Center" />
                        </BulletDecorator>
                        <!--
                            控件触发器
                        -->
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <!--  画上一个勾  -->
                                <Setter TargetName="img" Property="Source" Value="/MagicCube;component/Resources/Images/Mcheck.png" />
                                <!--<Setter TargetName="bd" Property="Background" Value="#5192ff" />-->
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Button x:Name="btnReturn"
                Margin="10,0,0,0"
                HorizontalAlignment="Left"
                Click="BtnReturn_Click"
                Cursor="Hand">
            <Button.Template>
                <ControlTemplate>
                    <StackPanel Orientation="Horizontal">
                        <Image Width="8"
                               Height="14"
                               Source="/MagicCube;component/Resources/ImageSingle/iconBack.png" />
                        <TextBlock Margin="11.3,0,0,0"
                                   VerticalAlignment="Center"
                                   FontSize="12"
                                   Foreground="#999999"
                                   Text="返回职位列表" />
                    </StackPanel>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <Grid Grid.Row="1" Background="White">
            <Grid x:Name="gdEdit" Visibility="Visible">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="30" />
                </Grid.RowDefinitions>
                <Popup x:Name="PopThreeCode"
                       Width="252"
                       MaxHeight="330"
                       Margin="0,0,0,0"
                       HorizontalAlignment="Center"
                       AllowsTransparency="True"
                       IsOpen="False"
                       Placement="Bottom"
                       PlacementTarget="{Binding ElementName=bdJobCategory}"
                       PopupAnimation="None"
                       StaysOpen="False">

                    <Border Width="252"
                            MinHeight="34"
                            Background="White"
                            BorderBrush="#ebebeb"
                            BorderThickness="1"
                            CornerRadius="3">
                        <StackPanel Margin="0,0,0,0" HorizontalAlignment="Left">
                            <ScrollViewer Width="250"
                                          MaxHeight="328"
                                          Margin="0,0,0,0"
                                          Background="White"
                                          Template="{DynamicResource ScrollViewerControlTemplate1}"
                                          VerticalScrollBarVisibility="Auto">
                                <ItemsControl x:Name="popThreeCodeList" Visibility="Collapsed">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel />
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Grid x:Name="gd"
                                                  Width="252"
                                                  Height="32"
                                                  Background="White"
                                                  MouseLeftButtonDown="gdThreeCode_MouseLeftButtonDown">
                                                <TextBlock x:Name="tb"
                                                           Margin="10,0,0,0"
                                                           VerticalAlignment="Center"
                                                           FontSize="12"
                                                           Foreground="#666666"
                                                           Text="{Binding name}" />
                                            </Grid>

                                            <DataTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="gd" Property="Background" Value="#00beff" />
                                                    <Setter TargetName="tb" Property="Foreground" Value="White" />
                                                </Trigger>
                                            </DataTemplate.Triggers>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                            <TextBlock x:Name="popTip"
                                       Margin="10,7,0,0"
                                       VerticalAlignment="Center"
                                       FontSize="12"
                                       Foreground="#333333"
                                       Text="抱歉，没有找到您输入的内容"
                                       Visibility="Collapsed" />
                        </StackPanel>

                    </Border>
                </Popup>
                <Popup x:Name="PopTemplate"
                       Width="252"
                       MaxHeight="330"
                       Margin="0,0,0,0"
                       HorizontalAlignment="Center"
                       AllowsTransparency="True"
                       Closed="PopTemplate_Closed"
                       IsOpen="False"
                       Opened="PopTemplate_Opened"
                       Placement="Bottom"
                       PlacementTarget="{Binding ElementName=bdTemplate}"
                       PopupAnimation="None"
                       StaysOpen="False">

                    <Border Width="252"
                            MinHeight="34"
                            Background="White"
                            BorderBrush="#ebebeb"
                            BorderThickness="1"
                            CornerRadius="3">
                        <StackPanel Margin="0,0,0,0" HorizontalAlignment="Left">
                            <ScrollViewer Width="250"
                                          MaxHeight="328"
                                          Margin="0,0,0,0"
                                          Background="White"
                                          Template="{DynamicResource ScrollViewerControlTemplate1}"
                                          VerticalScrollBarVisibility="Auto">
                                <ItemsControl x:Name="popTemplateList" Visibility="Collapsed">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel />
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Grid x:Name="gd"
                                                  Width="252"
                                                  Height="32"
                                                  Background="White"
                                                  MouseLeftButtonDown="gdTemplate_MouseLeftButtonDown">
                                                <TextBlock x:Name="tb"
                                                           MaxWidth="210"
                                                           Margin="10,0,0,0"
                                                           HorizontalAlignment="Left"
                                                           VerticalAlignment="Center"
                                                           FontSize="12"
                                                           Foreground="#333333"
                                                           Text="{Binding jobTemplateName}"
                                                           TextTrimming="WordEllipsis" />
                                                <Button x:Name="btnDelete"
                                                        Margin="0,0,5,0"
                                                        HorizontalAlignment="Right"
                                                        VerticalAlignment="Center"
                                                        Click="btnDelete_Click"
                                                        FocusVisualStyle="{x:Null}"
                                                        Visibility="Collapsed"
                                                        mc:Ignorable="d">
                                                    <Button.Style>
                                                        <Style TargetType="{x:Type Button}">
                                                            <Setter Property="Template">
                                                                <Setter.Value>
                                                                    <ControlTemplate TargetType="{x:Type Button}">
                                                                        <Border x:Name="PART_Border"
                                                                                Width="20"
                                                                                Height="20"
                                                                                Background="Transparent"
                                                                                BorderThickness="0"
                                                                                Padding="0">
                                                                            <Path x:Name="PART_Path"
                                                                                  Width="10"
                                                                                  Height="10"
                                                                                  HorizontalAlignment="Center"
                                                                                  VerticalAlignment="Center"
                                                                                  Data="M6,6 L6,6 10,10 M10,6 L10,6 6,10"
                                                                                  Fill="#A6bbc5"
                                                                                  Stretch="Fill"
                                                                                  Stroke="#888888"
                                                                                  StrokeThickness="1.5" />
                                                                        </Border>
                                                                        <ControlTemplate.Triggers>
                                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                                <Setter TargetName="PART_Path" Property="Stroke" Value="#f25751" />
                                                                            </Trigger>
                                                                            <Trigger Property="IsPressed" Value="True">
                                                                                <Setter TargetName="PART_Path" Property="Stroke" Value="#f25751" />
                                                                            </Trigger>
                                                                        </ControlTemplate.Triggers>
                                                                    </ControlTemplate>
                                                                </Setter.Value>
                                                            </Setter>
                                                        </Style>
                                                    </Button.Style>
                                                </Button>

                                            </Grid>

                                            <DataTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="gd" Property="Background" Value="#e7e7e7" />
                                                    <Setter TargetName="btnDelete" Property="Visibility" Value="Visible" />
                                                </Trigger>
                                            </DataTemplate.Triggers>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                            <TextBlock x:Name="popTemplateTip"
                                       Margin="10,7,0,0"
                                       VerticalAlignment="Center"
                                       FontSize="12"
                                       Foreground="#333333"
                                       Text="暂无保存过的职位模版"
                                       Visibility="Collapsed" />
                        </StackPanel>

                    </Border>
                </Popup>
                <Grid x:Name="gdPublishResult"
                      Grid.RowSpan="3"
                      Panel.ZIndex="3"
                      Background="White"
                      Visibility="Collapsed">
                    <StackPanel Margin="0,162,0,0"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Top"
                                Orientation="Horizontal">
                        <Image Width="26"
                               Height="16"
                               Margin="0,0,5,0"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Source="/MagicCube;component/Resources/Images/PublishZLY.png" />
                        <TextBlock FontSize="18"
                                   Foreground="#23c4ea"
                                   Text="职位已成功发布" />

                    </StackPanel>
                    <StackPanel Margin="0,224,0,0"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Top"
                                Orientation="Horizontal">
                        <UC:BlueButton Width="140"
                                       Height="34"
                                       Click="SearchResume_Click"
                                       Text="去搜索人才" />
                        <UC:WhiteButton Width="140"
                                        Height="34"
                                        Margin="14,0,0,0"
                                        Click="ResultReturn_Click"
                                        Text="继续发布职位" />
                    </StackPanel>

                    <Grid x:Name="tbFirstTip"
                          Height="46"
                          VerticalAlignment="Top"
                          Background="#fffdf3">
                        <TextBlock HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontSize="14"
                                   Foreground="#ff6500"
                                   Text="恭喜您首次发布职位成功，送您50积分" />
                        <Rectangle Height="1"
                                   VerticalAlignment="Bottom"
                                   Fill="#eeeeee" />
                    </Grid>
                </Grid>
                <Grid x:Name="gdPreView"
                      Grid.RowSpan="2"
                      Panel.ZIndex="1"
                      Visibility="Collapsed">

                    <UCViewSingle:UCJobDetails x:Name="ucPreView"
                                               Width="480"
                                               HorizontalAlignment="Right">
                        <UCViewSingle:UCJobDetails.Effect>
                            <DropShadowEffect BlurRadius="7"
                                              Direction="180"
                                              ShadowDepth="4"
                                              Color="#e6eced" />
                        </UCViewSingle:UCJobDetails.Effect>
                    </UCViewSingle:UCJobDetails>

                    <UC:FloatCloseButton Margin="0,20,16,0"
                                         HorizontalAlignment="Right"
                                         VerticalAlignment="Top"
                                         Click="BtnPreViewClose_Click"
                                         Focusable="False" />
                </Grid>
                <Grid x:Name="gdProvinceCity"
                      Grid.RowSpan="3"
                      Margin="-300,-60,0,0"
                      Panel.ZIndex="4"
                      Background="#82000000"
                      Visibility="Collapsed">
                    <UC:UCProvinceCity x:Name="ucProvinceCity"
                                       Width="620"
                                       Height="581"
                                       ForceSecondSelcted="True"
                                       MostSelectedNum="1"
                                       StrTitle="最多选择1项" />
                </Grid>
                <Grid x:Name="gdJobChoose"
                      Grid.Row="0"
                      Grid.RowSpan="3"
                      Panel.ZIndex="3"
                      Background="White"
                      Visibility="Collapsed">
                    <Grid Margin="0,0,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="130" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid Background="#ebebeb">
                            <ItemsControl x:Name="icJobTree"
                                          Grid.Column="0"
                                          Margin="0,16,0,0">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel VerticalAlignment="Top"
                                                    Background="#ebebeb"
                                                    Orientation="Vertical" />
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <RadioButton Width="130"
                                                     Height="36"
                                                     IsChecked="{Binding IsCheck}"
                                                     MouseEnter="RadioButton_MouseEnter">
                                            <RadioButton.Style>
                                                <Style TargetType="{x:Type RadioButton}">
                                                    <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}" />
                                                    <Setter Property="Background" Value="Transparent" />
                                                    <Setter Property="BorderThickness" Value="0" />
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate TargetType="{x:Type RadioButton}">
                                                                <BulletDecorator Background="Transparent">
                                                                    <Border x:Name="bd"
                                                                            HorizontalAlignment="Center"
                                                                            Background="Transparent"
                                                                            CornerRadius="0">
                                                                        <Grid>
                                                                            <ContentPresenter Width="{TemplateBinding Width}"
                                                                                              Height="{TemplateBinding Height}"
                                                                                              Margin="{TemplateBinding Padding}"
                                                                                              HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                                                                              RecognizesAccessKey="True" />
                                                                        </Grid>
                                                                    </Border>
                                                                </BulletDecorator>
                                                                <ControlTemplate.Triggers>

                                                                    <Trigger Property="IsEnabled" Value="false">
                                                                        <Setter TargetName="bd" Property="Background" Value="gray" />
                                                                    </Trigger>
                                                                    <Trigger Property="IsChecked" Value="false">
                                                                        <Setter TargetName="bd" Property="Background" Value="{x:Null}" />
                                                                    </Trigger>
                                                                    <Trigger Property="IsChecked" Value="true">
                                                                        <Setter TargetName="bd" Property="Background" Value="#ffffff" />
                                                                    </Trigger>

                                                                    <MultiTrigger>
                                                                        <MultiTrigger.Conditions>
                                                                            <Condition Property="IsMouseOver" Value="True" />
                                                                            <Condition Property="IsChecked" Value="False" />
                                                                        </MultiTrigger.Conditions>
                                                                        <Setter TargetName="bd" Property="Background" Value="#ffffff" />
                                                                    </MultiTrigger>


                                                                </ControlTemplate.Triggers>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Style>
                                            </RadioButton.Style>
                                            <RadioButton.Content>
                                                <Grid>
                                                    <TextBlock HorizontalAlignment="Center"
                                                               VerticalAlignment="Center"
                                                               FontSize="14"
                                                               Foreground="#666666"
                                                               Text="{Binding name}" />
                                                    <TextBlock Margin="0,0,16,0"
                                                               HorizontalAlignment="Right"
                                                               VerticalAlignment="Center"
                                                               FontSize="12"
                                                               Foreground="#bbbbbb"
                                                               Text="&gt;" />
                                                </Grid>
                                            </RadioButton.Content>
                                        </RadioButton>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Grid>
                        <ScrollViewer x:Name="svJobContent"
                                      Grid.Column="1"
                                      Margin="0,0,0,0"
                                      Background="White"
                                      Template="{DynamicResource ScrollViewerControlTemplate1}"
                                      VerticalScrollBarVisibility="Auto">
                            <ItemsControl x:Name="icJobContent" Grid.Column="1">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel VerticalAlignment="Top"
                                                    Background="White"
                                                    Orientation="Vertical" />
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="40,30,40,0">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="auto" />
                                                <RowDefinition Height="*" />
                                            </Grid.RowDefinitions>
                                            <TextBlock Grid.Row="0"
                                                       Margin="0,0,0,20"
                                                       VerticalAlignment="Top"
                                                       FontSize="14"
                                                       FontWeight="Bold"
                                                       Foreground="#333333"
                                                       Text="{Binding name}" />
                                            <ItemsControl Grid.Row="1"
                                                          Background="White"
                                                          ItemsSource="{Binding val}">
                                                <ItemsControl.ItemsPanel>
                                                    <ItemsPanelTemplate>
                                                        <WrapPanel HorizontalAlignment="Stretch"
                                                                   VerticalAlignment="Top"
                                                                   Background="White"
                                                                   Orientation="Horizontal" />
                                                    </ItemsPanelTemplate>
                                                </ItemsControl.ItemsPanel>
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <StackPanel Orientation="Horizontal">
                                                            <StackPanel Margin="0,0,5,15" Orientation="Horizontal">
                                                                <TextBlock Foreground="#e5e5e5" Text="|  " />
                                                                <CheckBox Click="JobCategorySelect_Click"
                                                                          Content="{Binding name}"
                                                                          IsChecked="{Binding isChoose}">
                                                                    <CheckBox.Style>
                                                                        <Style TargetType="CheckBox">
                                                                            <Setter Property="Foreground" Value="#666666" />
                                                                            <Setter Property="Cursor" Value="Hand" />
                                                                            <Setter Property="FontSize" Value="12" />
                                                                            <Setter Property="TextBlock.TextDecorations" Value="{x:Null}" />
                                                                            <Setter Property="Template">
                                                                                <Setter.Value>
                                                                                    <ControlTemplate TargetType="{x:Type CheckBox}">
                                                                                        <ContentPresenter Margin="10,0" VerticalAlignment="Center" />
                                                                                        <ControlTemplate.Triggers>
                                                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                                                <Setter Property="Foreground" Value="#00beff" />
                                                                                                <Setter Property="TextBlock.TextDecorations" Value="Underline" />
                                                                                            </Trigger>
                                                                                            <Trigger Property="IsChecked" Value="True">
                                                                                                <Setter Property="Foreground" Value="#00beff" />
                                                                                                <Setter Property="TextBlock.TextDecorations" Value="Underline" />
                                                                                            </Trigger>
                                                                                        </ControlTemplate.Triggers>
                                                                                    </ControlTemplate>
                                                                                </Setter.Value>
                                                                            </Setter>

                                                                        </Style>
                                                                    </CheckBox.Style>
                                                                </CheckBox>
                                                            </StackPanel>
                                                        </StackPanel>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>

                    </Grid>
                    <UC:FloatCloseButton Margin="0,16,16,0"
                                         HorizontalAlignment="Right"
                                         VerticalAlignment="Top"
                                         Click="BtnChooseClose_Click"
                                         Focusable="False" />
                </Grid>
                <Grid x:Name="gdPublish" Grid.Row="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                        <UC:PreviewButton x:Name="btnPreview"
                                          Margin="30,10,0,0"
                                          Click="btnPreview_Click"
                                          ImageHover="/MagicCube;component/Resources/ImageSingle/pbbtn1h.png"
                                          ImageSource="/MagicCube;component/Resources/ImageSingle/pbbtn1.png"
                                          Text="预览" />
                        <UC:PreviewButton x:Name="btnEditClear"
                                          Margin="10,10,0,0"
                                          Click="btnClear_Click"
                                          ImageHover="/MagicCube;component/Resources/ImageSingle/pbbtn2h.png"
                                          ImageSource="/MagicCube;component/Resources/ImageSingle/pbbtn2.png"
                                          Text="重置" />
                    </StackPanel>
                    <ScrollViewer x:Name="svEdit"
                                  Grid.Row="1"
                                  Margin="0,0,2,0"
                                  Background="#ffffff"
                                  Template="{DynamicResource ScrollViewerControlTemplate1}"
                                  VerticalScrollBarVisibility="Auto">
                        <StackPanel x:Name="spPublish"
                                    Margin="0,20,0,0"
                                    HorizontalAlignment="Center">
                            <StackPanel.Resources>
                                <Style TargetType="{x:Type TextBox}">
                                    <Setter Property="VerticalAlignment" Value="Center" />
                                    <Setter Property="Background" Value="White" />
                                    <Setter Property="FontSize" Value="14" />
                                    <Setter Property="BorderThickness" Value="1" />
                                    <Setter Property="BorderBrush" Value="#e5e5e5" />
                                    <Setter Property="Foreground" Value="#333840" />
                                    <Setter Property="VerticalContentAlignment" Value="Center" />
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="{x:Type TextBox}">
                                                <Grid>
                                                    <Border x:Name="bd"
                                                            Background="{TemplateBinding Background}"
                                                            BorderBrush="{TemplateBinding BorderBrush}"
                                                            BorderThickness="1"
                                                            CornerRadius="3">
                                                        <ScrollViewer x:Name="PART_ContentHost"
                                                                      Focusable="false"
                                                                      HorizontalScrollBarVisibility="Hidden"
                                                                      Padding="{TemplateBinding Padding}"
                                                                      VerticalScrollBarVisibility="Hidden" />
                                                    </Border>
                                                </Grid>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsFocused" Value="True">
                                                        <Setter TargetName="bd" Property="BorderBrush" Value="#00beff" />
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>

                                        </Setter.Value>
                                    </Setter>
                                </Style>
                                <Style TargetType="{x:Type TextBlock}">
                                    <Setter Property="VerticalAlignment" Value="Center" />
                                    <Setter Property="Background" Value="Transparent" />
                                    <Setter Property="Foreground" Value="#333840" />
                                    <Setter Property="Margin" Value="0,0,20,0" />
                                    <Setter Property="FontSize" Value="12" />
                                </Style>
                            </StackPanel.Resources>
                            <StackPanel x:Name="spTemp"
                                        Margin="0,7,0,7"
                                        Orientation="Horizontal">
                                <TextBlock Text="职位模版" />
                                <Border x:Name="bdTemplate"
                                        Width="252"
                                        Height="34"
                                        Background="White"
                                        BorderBrush="#e5e5e5"
                                        BorderThickness="1"
                                        CornerRadius="3"
                                        MouseLeftButtonUp="Temp_MouseLeftButtonUp">
                                    <Grid>
                                        <Grid x:Name="gdTempInput">
                                            <TextBlock Margin="10,0,0,0"
                                                       HorizontalAlignment="Left"
                                                       VerticalAlignment="Center"
                                                       FontSize="12"
                                                       Foreground="#b4b4b4"
                                                       IsHitTestVisible="False"
                                                       Style="{x:Null}"
                                                       Text="请选择" />
                                        </Grid>
                                        <Grid x:Name="gdTempShow" Visibility="Collapsed">
                                            <TextBlock x:Name="tbTempShow"
                                                       Margin="10,0,0,0"
                                                       HorizontalAlignment="Left"
                                                       VerticalAlignment="Center"
                                                       FontSize="12"
                                                       Foreground="#666666"
                                                       IsHitTestVisible="False"
                                                       Style="{x:Null}"
                                                       Text="" />
                                        </Grid>
                                        <Path Width="8"
                                              Margin="0,0,7,0"
                                              HorizontalAlignment="Right"
                                              Data="F1 M 301.14,-189.041L 311.57,-189.041L 306.355,-182.942L 301.14,-189.041 Z "
                                              Fill="#ababab"
                                              Stretch="Uniform" />
                                    </Grid>

                                </Border>
                            </StackPanel>
                            <StackPanel x:Name="spJobNameE"
                                        Margin="0,7,0,0"
                                        Orientation="Horizontal"
                                        Visibility="Collapsed">
                                <TextBlock Text="职位名称" />
                                <Border Width="252"
                                        Height="34"
                                        Background="#f5f5f5"
                                        BorderBrush="#e5e5e5"
                                        BorderThickness="1"
                                        CornerRadius="3">
                                    <TextBlock x:Name="tbJobNameE"
                                               Margin="10,0,0,0"
                                               HorizontalAlignment="Left"
                                               VerticalAlignment="Center"
                                               FontSize="12"
                                               Foreground="#b4b4b4"
                                               Text="" />
                                </Border>
                            </StackPanel>
                            <StackPanel x:Name="spJobNameP"
                                        Margin="0,7,0,0"
                                        Orientation="Horizontal">
